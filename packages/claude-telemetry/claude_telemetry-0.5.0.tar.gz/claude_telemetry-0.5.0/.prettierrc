{
    "printWidth": 88,
    "tabWidth": 4,
    "singleQuote": false,
    "trailingComma": "es5",
    "arrowParens": "always",
    "proseWrap": "always",
    "htmlWhitespaceSensitivity": "css",
    "embeddedLanguageFormatting": "auto",
    "singleAttributePerLine": false,
    "overrides": [
        {
            "files": ["*.md", "*.mdc"],
            "options": {
                "parser": "markdown",
                "tabWidth": 2,
                "printWidth": 88
            }
        },
        {
            "files": ["*.json", "*.jsonc"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.html", "*.xml", "*.svg"],
            "options": {
                "tabWidth": 2,
                "bracketSameLine": true,
                "htmlWhitespaceSensitivity": "css",
                "singleAttributePerLine": false
            }
        },
        {
            "files": ["*.yml", "*.yaml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
