<odoo>
    <record id="verifactu_developer_form_view" model="ir.ui.view">
        <field name="name">verifactu.developer.form</field>
        <field name="model">verifactu.developer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="vat" />
                        <field name="sif_name" />
                        <field name="version" />
                        <field name="responsibility_declaration" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>
    <record id="verifactu_developer_tree_view" model="ir.ui.view">
        <field name="name">verifactu.developer.tree</field>
        <field name="model">verifactu.developer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="vat" />
                <field name="sif_name" />
                <field name="version" />
            </tree>
        </field>
    </record>
    <record id="verifactu_developer_action" model="ir.actions.act_window">
        <field name="name">VERI*FACTU developers</field>
        <field name="res_model">verifactu.developer</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="verifactu_developer_menu"
        action="verifactu_developer_action"
        parent="l10n_es_aeat.menu_l10n_es_aeat_config"
    />
</odoo>
