services:
  db:
    image: postgres:16-alpine
    container_name: {{ project_name }}_db
    environment:
      POSTGRES_DB: {{ project_name }}
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 10s
      timeout: 5s
      retries: 5

  web:
    build:
      context: .
      dockerfile: Dockerfile
      args:
        INSTALL_DEV: "true"  # Install dev dependencies for local development
    container_name: {{ project_name }}_web
    command: python manage.py runserver 0.0.0.0:${PORT:-8000}
    # Run as root in development to avoid permission issues with mounted volumes
    # Production deployments should use the Dockerfile's non-root user
    user: root
    volumes:
      - .:/app
      - static_volume:/app/staticfiles
      - media_volume:/app/media
    ports:
      - "${PORT:-8000}:${PORT:-8000}"
    environment:
      - DJANGO_SETTINGS_MODULE={{ project_name }}.settings.local
      - DATABASE_URL=postgresql://postgres:postgres@db:5432/{{ project_name }}
      - PORT=${PORT:-8000}
    depends_on:
      db:
        condition: service_healthy

volumes:
  postgres_data:
  static_volume:
  media_volume:
