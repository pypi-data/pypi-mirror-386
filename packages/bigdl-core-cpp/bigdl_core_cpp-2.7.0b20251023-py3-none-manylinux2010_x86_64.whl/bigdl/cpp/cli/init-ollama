#!/bin/bash

# Default values
llm_dir="$(dirname "$(python -c "import bigdl.cpp;print(bigdl.cpp.__file__)")")"
lib_dir="$llm_dir/libs/ollama"

ln -sf "${lib_dir}"/{ollama,ollama-lib,libggml.so,libggml-cpu-alderlake.so,libggml-cpu-haswell.so,libggml-cpu-icelake.so,libggml-cpu-sapphirerapids.so,libggml-cpu-skylakex.so,libggml-sycl.so,libggml-base.so,libllama.so,libllava_shared.so,libsample.so,libmtmd_shared.so} "${PWD}"
eval "$command"
