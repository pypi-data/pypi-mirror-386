            "properties": {
              "title": "Prospector configuration properties",
              "description": "The properties key = value that should be present",
              "default": {
                "strictness": "veryhigh",
                "max-line-length": 110,
                "doc-warnings": true,
                "mypy": { "run": true },
                "bandit": { "run": true }
              },
              "type": "object"
            }
          }
        },
