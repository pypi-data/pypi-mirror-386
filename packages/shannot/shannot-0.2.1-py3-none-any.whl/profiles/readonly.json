{
  "name": "readonly",
  "allowed_commands": [
    "ls",
    "/usr/bin/ls",
    "cat",
    "/usr/bin/cat",
    "head",
    "/usr/bin/head",
    "tail",
    "/usr/bin/tail",
    "grep",
    "/usr/bin/grep",
    "/usr/bin/find",
    "/usr/bin/env",
    "/usr/bin/stat"
  ],
  "binds": [
    {
      "source": "/usr",
      "target": "/usr",
      "read_only": true,
      "create_target": false
    },
    {
      "source": "/bin",
      "target": "/bin",
      "read_only": true,
      "create_target": false
    },
    {
      "source": "/sbin",
      "target": "/sbin",
      "read_only": true,
      "create_target": false
    },
    {
      "source": "/lib",
      "target": "/lib",
      "read_only": true,
      "create_target": false
    },
    {
      "source": "/lib64",
      "target": "/lib64",
      "read_only": true,
      "create_target": false
    },
    {
      "source": "/etc",
      "target": "/etc",
      "read_only": true,
      "create_target": false
    },
    {
      "source": "/var/lib/ca-certificates",
      "target": "/var/lib/ca-certificates",
      "read_only": true,
      "create_target": true
    }
  ],
  "tmpfs_paths": ["/tmp", "/var/tmp", "/run", "/home/agent"],
  "environment": {
    "HOME": "/home/agent",
    "PATH": "/usr/bin:/bin",
    "LANG": "C.UTF-8",
    "LC_ALL": "C.UTF-8"
  },
  "network_isolation": true,
  "additional_args": [
    "--hostname",
    "sandbox",
    "--chdir",
    "/home/agent",
    "--dir",
    "/var/cache",
    "--dir",
    "/var/log"
  ]
}
