<i:importSpec
	xmlns:i="http://textgrid.info/import"
	xmlns:xml="http://www.w3.org/XML/1998/namespace" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xsi:schemaLocation="http://textgrid.info/import ../../xsd/textgrid-import-2010.xsd ">

	<i:xmlConfiguration xml:id="xsd" description="W3C XML Schema 1.0">
		<i:element name="xs:include" method="none">
			<i:attribute name="schemaLocation" method="full"/>
		</i:element>
		<i:element name="xs:import" method="none">
			<i:attribute name="schemaLocation" method="full"/>
		</i:element>
		<i:element name="xs:redefine" method="none">
			<i:attribute name="schemaLocation" method="full"/>
		</i:element>
		<i:element name="xs:documentation" method="none">
			<i:attribute name="source" method="full"/>
		</i:element>
		<i:any-element name="any" method="none">
			<i:attribute name="xsi:schemaLocation" method="token"/>
		</i:any-element>
	</i:xmlConfiguration>
</i:importSpec>
