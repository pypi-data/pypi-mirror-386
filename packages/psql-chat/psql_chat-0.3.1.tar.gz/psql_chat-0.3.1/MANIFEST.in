# Include documentation and configuration files
include README.md
include LICENSE

# Include the source package
recursive-include src/psql_chat *.py
recursive-include src/psql_chat py.typed

# Exclude compiled Python files and caches
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude .pytest_cache