default:
    @just --list

init:
    uv sync
    uv run pre-commit install

build:
    uv build

deploy:
    uv run nuitka src/git_timemachine/__main__.py \
    --onefile \
    --output-filename=git-timemachine \
    --output-dir=dist \
    --follow-imports

lint:
    uv run pylint src/ tests/

publish:
    uv publish

test:
    uv run pytest --cov=src --cov-report=term-missing


