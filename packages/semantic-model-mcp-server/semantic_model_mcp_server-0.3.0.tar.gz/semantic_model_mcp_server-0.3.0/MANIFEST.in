# Include essential files
include LICENSE
include README.md
include requirements.txt
include setup.bat
include directlake_example.json
include *.md

# Include package metadata
include __version__.py
include __init__.py

# Include configuration files
recursive-include .vscode *.json

# Include dotnet assemblies and documentation
recursive-include dotnet *.dll
recursive-include dotnet *.xml

# Include core module files
recursive-include core *.py
recursive-include core *.json
recursive-include core/templates *.json

# Include tools
recursive-include tools *.py

# Include source files
recursive-include src *.py

# Include prompts
recursive-include prompts *.py
recursive-include prompts *.md

# Include documentation
recursive-include docs *.md
recursive-include docs *.png
recursive-include docs *.jpg

# Include example files
recursive-include examples *.py
recursive-include examples *.json

# Include images
recursive-include images *.png
recursive-include images *.jpg
recursive-include images *.gif

# Exclude specific files and patterns
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude *.tmp
global-exclude *.log
global-exclude *.bak

# Exclude testing files from distribution
recursive-exclude testing *

# Exclude build artifacts
recursive-exclude build *
recursive-exclude dist *
recursive-exclude *.egg-info *

# Exclude virtual environment
recursive-exclude .venv *
recursive-exclude venv *

# Exclude authentication cache
global-exclude *.token
global-exclude *.key
global-exclude auth_cache
global-exclude token_cache