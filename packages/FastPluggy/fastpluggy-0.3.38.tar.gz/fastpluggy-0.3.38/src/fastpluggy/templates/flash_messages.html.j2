{# flash_messages.html.j2 #}
{% for flash in get_flash_messages(request) %}
    <div class="alert alert-{{ flash.category }} alert-dismissible" role="alert">
        {{ flash.message }}
        {% if flash.exception %}
            <p><pre>{{ flash.exception }}</pre></p>
        {% endif %}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endfor %}