{% from "menu.html.j2" import render_menu, render_admin_dropdown %}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"/>

    <title>{% block title %}{{ app_name }}{% endblock %}</title>
    <!-- Tabler CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta17/dist/css/tabler.min.css">
    <!-- Tabler Icons -->
    <link href="https://cdn.jsdelivr.net/npm/@tabler/icons@latest/iconfont/tabler-icons.min.css" rel="stylesheet">
    <!-- FontAwesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/static/css/styles.css" rel="stylesheet">

    {% for js_file in extra_js_files %}
        <script src="{{ js_file }}"></script>
    {% endfor %}

    {% for css_file in extra_css_files %}
        <link href="{{ css_file }}" rel="stylesheet">
    {% endfor %}

</head>
<body class="antialiased">
<div id="notifications" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;"></div>

<div class="page">
    <!-- Sidebar -->
    <div class="page-wrapper">
        <aside class="navbar navbar-vertical navbar-expand-lg navbar-dark" style="background-color: #1e293b;">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ fp_admin_base_url }}">{{ app_name }}</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar-menu"
                        aria-controls="sidebar-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="sidebar-menu">
                    <ul class="navbar-nav">

                        <!-- Loop through the modules and their entries -->
                        {{ render_menu(menu_main) }}

                        {# Show admin menu if either the user is admin OR if auth is disabled #}
                        {% if (request.state.current_user and request.state.current_user.is_admin) or (not auth_enable) %}
                            <li>
                                <hr class="dropdown-divider">
                            </li>

                            {{ render_admin_dropdown(menu_admin) }}
                        {% endif %}
                    </ul>
                    <!-- Add version at the bottom of the sidebar -->
                    <div class="mt-auto text-center" style="padding-top: 20px;">
                        <small class="text-muted">
                            FastPluggy Version: {{ version }} - {{ source_commit_core }}
                        </small>
                    </div>
                </div>
            </div>
        </aside>
        <!-- /# Sidebar -->

        <!-- Page Content -->
        <div class="page-wrapper">
            {% if title %}
            <header class="navbar navbar-expand-md navbar-light d-print-none">
                <div class="container-xl d-flex align-items-center justify-content-between">
                    <!-- Left Side: Brand + Toggler -->
                        <div class="d-flex align-items-center">
                            <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#navbar-menu"
                                    aria-controls="navbar-menu" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <h1 class="navbar-brand mb-0">{{ title or app_name }}</h1>
                        </div>

                    <!-- Right Side: Fullscreen Toggle + User Menu -->
                    {% if auth_enable %}
                        <div class="d-flex align-items-center">
                            <label class="btn btn-icon me-3">
                                <i class="fa-solid fa-maximize" id="toggle-icon"></i>
                            </label>
                            <!-- USER PROFILE MENU -->
                            <div class="navbar-nav flex-row order-md-last">
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown"
                                       aria-label="Open user menu">
                                        {% if request.state.current_user.profile_picture %}
                                            <span class="avatar avatar-sm"
                                                  style="background-image: url(/static/samples/avatars/default.jpg)">
                                        </span>
                                        {% endif %}
                                        <div class="d-none d-xl-block ps-2">
                                            {% if request.state.current_user %}
                                                <div>{{ request.state.current_user.display_name }}</div>
                                                {% if request.state.current_user.is_admin %}
                                                    <div class="mt-1 small text-secondary">Admin</div>
                                                {% endif %}
                                            {% else %}
                                                <div>Guest</div>
                                            {% endif %}
                                        </div>
                                    </a>
                                    {% if request.state.user_menu %}
                                        <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                            {% for item in request.state.user_menu %}

                                                <a href="{{ item.url }}" class="dropdown-item">
                                                    {% if item.icon %}
                                                        <i class="{{ item.icon }}"></i>
                                                    {% endif %}
                                                    {{ item.label }}
                                                </a>

                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    <!-- END USER PROFILE MENU (only shown if auth_enable is true) -->
                </div>
            </header>
            {% endif %}

            <main class="page-body">
                <div class="container-xl">
                    {% include "flash_messages.html.j2" %}
                    {% block content %}
                        <!-- Page specific content goes here -->
                    {% endblock %}
                </div>
            </main>
        </div>
    </div>
</div>

<!-- Tabler JS -->
<script src="https://cdn.jsdelivr.net/npm/@tabler/core@1.0.0-beta17/dist/js/tabler.min.js"></script>
<!-- Custom JS -->
<script src="/static/js/scripts.js"></script>
<script>
    window.APP_VERSION = "{{ version }}";
    window.global_var = {{ inject_js_global_var() | tojson }};

    document.addEventListener('DOMContentLoaded', () => {
        const currentPath = window.location.pathname;
        document.querySelectorAll('.nav-item .dropdown-item').forEach(item => {
            if (item.href.includes(currentPath)) {
                item.classList.add('active');
                const parentDropdown = item.closest('.dropdown');
                if (parentDropdown) {
                    parentDropdown.classList.add('show');
                    parentDropdown.querySelector('.dropdown-toggle').classList.add('active');
                }
            }
        });

        const toggleIcon = document.getElementById('toggle-icon');
        const savedLayout = localStorage.getItem('layoutType');
        const headerContainer = document.querySelector('header .container-fluid, header .container-xl');
        const mainContainer = document.querySelector('main.page-body .container-fluid, main.page-body .container-xl');

        function setLayout(layout) {
            [headerContainer, mainContainer].forEach(container => {
                if (!container) return;
                container.classList.remove('container-xl', 'container-fluid');
                container.classList.add(layout);
            });
            if (toggleIcon) {
                if (layout === 'container-fluid') {
                    toggleIcon.classList.remove('fa-maximize');
                    toggleIcon.classList.add('fa-minimize');
                } else {
                    toggleIcon.classList.remove('fa-minimize');
                    toggleIcon.classList.add('fa-maximize');
                }
            }
        }

        if (savedLayout) {
            setLayout(savedLayout);
        }
        if (toggleIcon) {
            toggleIcon.addEventListener('click', function () {
                const currentLayout = mainContainer.classList.contains('container-xl') ? 'container-xl' : 'container-fluid';
                const newLayout = currentLayout === 'container-xl' ? 'container-fluid' : 'container-xl';
                setLayout(newLayout);
                localStorage.setItem('layoutType', newLayout);
            });
        }
    });

    document.addEventListener("DOMContentLoaded", function () {
        const collapseButtons = document.querySelectorAll('[data-bs-toggle="collapse"]');
        collapseButtons.forEach(function (button) {
            button.addEventListener('click', function () {
                const icon = this.querySelector('i');
                if (icon.classList.contains('ti-chevron-up')) {
                    icon.classList.remove('ti-chevron-up');
                    icon.classList.add('ti-chevron-down');
                } else {
                    icon.classList.remove('ti-chevron-down');
                    icon.classList.add('ti-chevron-up');
                }
            });
        });
    });
</script>
</body>
</html>
