"""Executable for the standalone backend server."""

import sys
from pathlib import Path

# Add provisions for development usage
rootdir = Path(__file__).parent.parent.resolve()
if (rootdir / '.git').exists():
    sys.path.insert(0, str(rootdir))


import spin.server  # pylint: disable=wrong-import-position

sys.exit(spin.server.main())
