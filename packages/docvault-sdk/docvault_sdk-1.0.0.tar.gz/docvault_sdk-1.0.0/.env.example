# DocVault SDK Configuration
# Copy this file to .env and fill in your values for local development
# 
# Configuration Priority:
# 1. Direct Python Config (config = Config(...))
# 2. Environment Variables (export POSTGRES_HOST=...)
# 3. .env file (loaded automatically if python-dotenv is available)
# 4. Hardcoded Defaults in code

# =============================================================================
# PostgreSQL Database Configuration
# =============================================================================

# Database connection details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=doc_vault

# SSL configuration for PostgreSQL connection
# Options: disable, prefer, require
POSTGRES_SSL=disable

# =============================================================================
# MinIO/S3 Storage Configuration
# =============================================================================

# MinIO server endpoint (or AWS S3 endpoint)
# Examples: localhost:9000, minio:9000, s3.amazonaws.com
MINIO_ENDPOINT=localhost:9000

# MinIO/S3 credentials
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Whether to use HTTPS (true for AWS S3, false for local MinIO)
MINIO_SECURE=false

# =============================================================================
# DocVault Configuration
# =============================================================================

# Prefix for S3/MinIO buckets
# Buckets will be named: {prefix}-org-{organization_id}
BUCKET_PREFIX=doc-vault

# Logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO