FROM astral/uv:0.7-python3.11-bookworm-slim AS builder

RUN apt-get update && apt-get install -y build-essential make && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY . .
RUN uv pip install -r doc/requirements.txt --system
RUN make -C /app/doc clean html || { echo "============== Sphinx error log =============="; cat /tmp/sphinx-err-*.log || true; exit 1; }

FROM nginx:alpine
COPY --from=builder /app/doc/build/html /usr/share/nginx/html/latest
COPY builds/nginx-default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
