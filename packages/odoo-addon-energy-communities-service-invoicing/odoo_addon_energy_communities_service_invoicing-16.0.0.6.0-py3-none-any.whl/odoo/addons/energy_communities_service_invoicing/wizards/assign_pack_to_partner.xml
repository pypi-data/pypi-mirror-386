<odoo>
  <record
    id="view_assign_pack_to_partner_wizard_form"
    model="ir.ui.view"
  >
    <field name="name">assign.pack.to.partner.wizard.form</field>
    <field name="model">assign.pack.to.partner.wizard</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="activation_date" required="1"/>
            <field
              name="pack_id"
              required="1"
              options="{'no_create': True, 'no_create_edit':True, 'no_open': True}"
            />
            <field name="payment_mode_id" required="1"/>
            <field name="partner_mids" required="1"/>
          </group>
        </sheet>
        <footer>
          <button
            name="execute_assignation"
            string="Assign Pack"
            type="object"
            class="btn-primary"
          />
          <button
            special="cancel"
            string="Cancelar"
            class="btn-secondary"
          />
        </footer>
      </form>
    </field>
  </record>
  <record
    model="ir.actions.act_window"
    id="assign_pack_to_partner_wizard_action"
  >
      <field name="name">Assign pack to partner</field>
      <field name="res_model">assign.pack.to.partner.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
  </record>

</odoo>
