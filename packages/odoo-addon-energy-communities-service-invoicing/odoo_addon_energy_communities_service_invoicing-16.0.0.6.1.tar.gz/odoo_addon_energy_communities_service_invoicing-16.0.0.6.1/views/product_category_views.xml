<odoo>
  <record id="view_category_property_form" model="ir.ui.view">
    <field name="name">product.category.property.form.inherit (service invoicing)</field>
    <field name="model">product.category</field>
    <field name="inherit_id" ref="product.product_category_form_view"/>
    <field name="arch" type="xml">
      <group name="first" position="after">
        <group name="internal_ref">
          <field name="data_xml_id" />
          <field name="pack_type" />
        </group>
        <group name="service_invoicing_property" >
          <group string="Service invoicing Properties">
            <field name="service_invoicing_sale_journal_id"/>
            <field name="service_invoicing_purchase_journal_id"/>
            <field name="service_invoicing_sale_team_id"/>
          </group>
        </group>
      </group>
    </field>
  </record>
</odoo>
