{
    "api_params": {
        "actions": [],
        "formats":["default", "raw", "llava"],
        "accepted_ds_intents": ["training", "evaluation", "testing"],
        "image":"TAO_VILA",
        "spec_backend":"yaml",
        "actions_pipe":{
        }
    },

    "dataset_validation": {
        "required_files": {
            "default": [
                {"path": "dataset.yaml", "type": "file"}
            ],
            "raw": [
                {
                    "any_of": [
                        {"path": "**/*.jpg", "type": "glob"},
                        {"path": "**/*.jpeg", "type": "glob"},
                        {"path": "**/*.png", "type": "glob"},
                        {"path": "**/*.mp4", "type": "glob"},
                        {"path": "**/*.mkv", "type": "glob"},
                        {"path": "**/*.webm", "type": "glob"}
                    ]
                }
            ],
            "llava": [
                {
                    "any_of": [
                        {
                            "all_of": [
                                {"path": "images.tar.gz", "type": "file"},
                                {"path": "annotations.json", "type": "file"}
                            ]
                        },
                        {
                            "all_of": [
                                {"path": "videos.tar.gz", "type": "file"},
                                {"path": "annotations.json", "type": "file"}
                            ]
                        }
                    ]
                }
            ]
        }
    }
}