<odoo>
    <record id="facility_stamp_view_tree" model="ir.ui.view">
        <field name="name">facility_stamp - Tree</field>
        <field name="model">facility_stamp</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="type_id" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="facility_stamp_view_search" model="ir.ui.view">
        <field name="name">facility_stamp - Search</field>
        <field name="model">facility_stamp</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="facility_stamp_view_form" model="ir.ui.view">
        <field name="name">facility_stamp - Form</field>
        <field name="model">facility_stamp</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='active']" position="before">
                    <field name="type_id" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="facility_stamp_action" model="ir.actions.act_window">
        <field name="name">Facility Stamps</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">facility_stamp</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="facility_stamp_menu"
        name="Facility Stamps"
        parent="faktur_pajak_configuration_menu"
        action="facility_stamp_action"
        groups="facility_stamp_configurator_group"
        sequence="50"
    />

</odoo>
