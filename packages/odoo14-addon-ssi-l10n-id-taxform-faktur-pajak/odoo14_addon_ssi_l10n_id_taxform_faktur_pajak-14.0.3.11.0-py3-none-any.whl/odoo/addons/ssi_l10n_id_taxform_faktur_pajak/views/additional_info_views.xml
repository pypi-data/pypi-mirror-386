<odoo>
    <record id="additional_info_view_tree" model="ir.ui.view">
        <field name="name">additional_info - Tree</field>
        <field name="model">additional_info</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="type_id" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="additional_info_view_search" model="ir.ui.view">
        <field name="name">additional_info - Search</field>
        <field name="model">additional_info</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="additional_info_view_form" model="ir.ui.view">
        <field name="name">additional_info - Form</field>
        <field name="model">additional_info</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='active']" position="before">
                    <field name="type_id" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="additional_info_action" model="ir.actions.act_window">
        <field name="name">Additional Info</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">additional_info</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="additional_info_menu"
        name="Additional Info"
        parent="faktur_pajak_configuration_menu"
        action="additional_info_action"
        groups="additional_info_configurator_group"
        sequence="40"
    />

</odoo>
