<odoo>

<record id="create_faktur_pajak_keluaran_view_form" model="ir.ui.view">
    <field name="name">Create Faktur Pajak Keluaran</field>
    <field name="model">create_faktur_pajak_keluaran</field>
    <field name="arch" type="xml">
        <form>
            <group name="group_1" colspan="4" col="2">
                <field name="type_id" />
                <field name="efaktur_mode" />
                <field
                        name="efaktur_opt"
                        attrs="{'invisible': [('efaktur_mode', '=', 'detail')], 'required': [('efaktur_mode', '=', 'header')]}"
                    />
                <field
                        name="allowed_add_info_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <field name="add_info_id" domain="[('id','in',allowed_add_info_ids)]" />
                <field
                        name="allowed_facility_stamp_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <field
                        name="facility_stamp_id"
                        domain="[('id','in',allowed_facility_stamp_ids)]"
                    />
                <field name="buyer_document_id" />
                <field
                        name="allowed_fpk_journal_ids"
                        widget="many2many_tags"
                        invisible="1"
                    />
                <field name="group_by_partner" widget="boolean_toogle" />
            </group>
            <field name="move_ids" invisible="1" />
            <field name="allowed_move_ids" />
            <field name="partner_ids" />
            <footer>
                <button
                        name="action_confirm"
                        type="object"
                        string="Confirm"
                        class="oe_highlight"
                    />
                or
                <button special="cancel" string="Cancel" />
            </footer>
        </form>
    </field>
</record>

<record id="create_faktur_pajak_keluaran_action" model="ir.actions.act_window">
    <field name="name">Create Faktur Pajak Keluaran</field>
    <field name="res_model">create_faktur_pajak_keluaran</field>
    <field name="view_id" ref="create_faktur_pajak_keluaran_view_form" />
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="binding_model_id" ref="account.model_account_move" />
    <field name="binding_view_types">list</field>
    <field name="binding_type">action</field>
</record>
</odoo>
