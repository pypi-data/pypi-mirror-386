<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="core_tax_xml_view">
        <TaxInvoiceBulk t-foreach="docs" t-as="doc">
            <TIN t-esc="doc.efaktur_company_npwp" />
            <ListOfTaxInvoice>
                <TaxInvoice>
                    <TaxInvoiceDate t-esc="doc.efaktur_tanggal_faktur" />
                    <TaxInvoiceOpt>Normal</TaxInvoiceOpt>
                    <TrxCode t-esc="doc.efaktur_kd_jenis_transaksi" />
                    <AddInfo t-esc="doc.efaktur_of_add_info" />
                    <CustomDoc t-esc="doc.name" />
                    <CustomDocMonthYear
                        t-esc="doc.efaktur_masa_pajak + doc.efaktur_tahun_pajak"
                    />
                    <RefDesc t-esc="doc.efaktur_referensi" />
                    <FacilityStamp t-esc="doc.efaktur_of_facility_stamp" />
                    <SellerIDTKU t-esc="doc.efaktur_seller_id_tku" />
                    <BuyerTin t-esc="doc.efaktur_npwp" />
                    <BuyerDocument t-esc="doc.efaktur_of_buyer_document" />
                    <BuyerCountry t-esc="doc.efaktur_country" />
                    <BuyerDocumentNumber>-</BuyerDocumentNumber>
                    <BuyerName t-esc="doc.efaktur_nama" />
                    <BuyerAdress t-esc="doc.efaktur_alamat_lengkap" />
                    <BuyerEmail t-esc="doc.efaktur_email" />
                    <BuyerIDTKU t-esc="doc.efaktur_buyer_id_tku" />
                    <ListOfGoodService>
                        <t t-if="doc.efaktur_mode == 'detail'">
                            <GoodService t-foreach="doc.detail_ids" t-as="detail">
                                <Opt t-esc="detail.efaktur_of_opt" />
                                <Code t-esc="detail.efaktur_of_code" />
                                <Name t-esc="detail.efaktur_of_name" />
                                <Unit t-esc="detail.efaktur_of_unit" />
                                <Price t-esc="detail.efaktur_of_harga_satuan" />
                                <Qty t-esc="detail.efaktur_of_jumlah_barang" />
                                <TotalDiscount t-esc="detail.efaktur_of_diskon" />
                                <TaxBase t-esc="detail.efaktur_of_dpp" />
                                <OtherTaxBase t-esc="detail.efaktur_of_dpp" />
                                <VATRate>12</VATRate>
                                <VAT t-esc="detail.efaktur_of_ppn" />
                                <STLGRate>0</STLGRate>
                                <STLG>0</STLG>
                            </GoodService>
                        </t>
                        <t t-else="">
                            <GoodService>
                                <Opt t-esc="doc.efaktur_of_opt" />
                                <Code>-</Code>
                                <Name t-esc="doc.efaktur_of_name" />
                                <Unit>UM.0033</Unit>
                                <Price t-esc="doc.efaktur_of_harga_satuan" />
                                <Qty t-esc="doc.efaktur_of_jumlah_barang" />
                                <TotalDiscount t-esc="doc.efaktur_of_diskon" />
                                <TaxBase t-esc="doc.efaktur_of_dpp" />
                                <OtherTaxBase t-esc="doc.efaktur_of_dpp" />
                                <VATRate>12</VATRate>
                                <VAT t-esc="doc.efaktur_of_ppn" />
                                <STLGRate>0</STLGRate>
                                <STLG>0</STLG>
                            </GoodService>
                        </t>
                    </ListOfGoodService>
                </TaxInvoice>
            </ListOfTaxInvoice>
        </TaxInvoiceBulk>
    </template>
</odoo>
