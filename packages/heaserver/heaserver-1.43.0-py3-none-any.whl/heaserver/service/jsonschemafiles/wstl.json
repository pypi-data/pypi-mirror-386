{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "wstl": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "hci": {
                    "type": "object",
                    "properties": {
                        "href": {
                            "type": "string"
                        }
                    }
                },
                "actions": {
                    "type": "array",
                    "items": {
                        "$ref": "file:wstlaction.json"
                    },
                    "mergeStrategy": "append"
                },
                "content": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "html",
                                "markdown",
                                "text"
                            ]
                        },
                        "text": {
                            "type": "string"
                        }
                    }
                },
                "data": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "patternProperties": {
                            ".*": {
                                "not": {
                                    "type": "object"
                                }
                            }
                        },
                        "additionalProperties": false
                    },
                    "mergeStrategy": "append"
                },
                "related": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "array"
                    },
                    "minProperties": 1
                }
            }
        }
    },
    "required": [
        "wstl"
    ]
}
