{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@gradio/*": [
                "node_modules/@gradio/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.svelte"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist/**/*"
    ]
}