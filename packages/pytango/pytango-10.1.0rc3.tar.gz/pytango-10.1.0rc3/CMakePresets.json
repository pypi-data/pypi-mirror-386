{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 16,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "cmake-pedantic",
      "hidden": true,
      "warnings": {
        "dev": true,
        "deprecated": true,
        "uninitialized": true,
        "unusedCli": true,
        "systemVars": false
      },
      "errors": {
        "dev": true,
        "deprecated": true
      }
    },
    {
      "name": "cppcheck",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CPPCHECK": "cppcheck;--inline-suppr;-D=PYBIND11_MAKE_OPAQUE"
      }
    },
    {
      "name": "clang-tidy",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--header-filter=^${sourceDir}/"
      }
    },
    {
      "name": "cpp-coverage",
      "hidden": true,
      "cacheVariables": {
        "PYTANGO_ENABLE_COVERAGE": "ON"
      }
    },
    {
      "name": "flags-unix",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wall -Wextra -Wpedantic -Wconversion -Wsign-conversion -Wcast-qual -Wformat=2 -Wundef -Werror=float-equal -Wshadow -Wcast-align -Wunused -Wnull-dereference -Wdouble-promotion -Wimplicit-fallthrough -Wextra-semi -Woverloaded-virtual -Wnon-virtual-dtor -Wold-style-cast -Werror"
      }
    },
    {
      "name": "flags-windows",
      "description": "Note that all the flags after /W4 are required for MSVC to conform to the language standard",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/utf-8 /w14165 /w44242 /w44254 /w44263 /w34265 /w34287 /w44296 /w44365 /w44388 /w44464 /w14545 /w14546 /w14547 /w14549 /w14555 /w34619 /w34640 /w24826 /w14905 /w14906 /w14928 /w45038 /W4 /permissive- /volatile:iso /Zc:preprocessor /Zc:__cplusplus /Zc:externConstexpr /Zc:throwingNew /EHsc /WX"
      }
    },
    {
      "name": "hardening-unix",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-U_FORTIFY_SOURCE -D_FORTIFY_SOURCE=2 -fstack-protector-strong -Wformat -Werror=format-security"
      }
    },
    {
      "name": "ci-unix",
      "generator": "Ninja",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "dev-mode",
      "hidden": true,
      "inherits": ["cmake-pedantic", "flags-unix"],
      "cacheVariables": {
        "pytango_DEVELOPER_MODE": "ON",
        "Tango_USE_PKG_CONFIG": "OFF"
      }
    },
    {
      "name": "ci-win64",
      "inherits": ["flags-windows"],
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "hidden": true
    },
    {
      "name": "ci-sanitize",
      "binaryDir": "${sourceDir}/cmakebuild/sanitize",
      "inherits": ["ci-unix", "dev-mode"],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Sanitize",
        "CMAKE_CXX_FLAGS_SANITIZE": "-O2 -g -fsanitize=address,undefined -fno-omit-frame-pointer -fno-common"
      }
    },
    {
      "name": "ci-build",
      "binaryDir": "${sourceDir}/cmakebuild",
      "hidden": true
    },
    {
      "name": "ci-macOS",
      "inherits": ["ci-build", "ci-unix", "dev-mode"]
    },
    {
      "name": "ci-macOS-wheel",
      "inherits": ["ci-build", "ci-unix", "hardening-unix"]
    },
    {
      "name": "ci-Linux",
      "inherits": ["ci-build", "ci-unix", "cpp-coverage", "cppcheck", "dev-mode"]
    },
    {
      "name": "ci-Linux-wheel",
      "inherits": ["ci-build", "ci-unix", "hardening-unix"]
    },
    {
      "name": "ci-Windows",
      "inherits": ["ci-build", "ci-win64"]
    },
    {
      "name": "dev-Linux",
      "inherits": ["ci-Linux", "clang-tidy"],
       "cacheVariables": {
         "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
         "CMAKE_DISABLE_PRECOMPILE_HEADERS": "ON"
       }
    },
    {
      "name": "third-party-packaging-Linux",
      "description": "Public cmake config preset for third party packagers",
      "inherits": ["hardening-unix"],
      "binaryDir": "${sourceDir}/cmakebuild",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_DISABLE_PRECOMPILE_HEADERS": "ON"
      }
    },
    {
      "name": "third-party-packaging-MacOSX",
      "description": "Public cmake config preset for third party packagers",
      "inherits": ["third-party-packaging-Linux"]
    }
  ]
}
