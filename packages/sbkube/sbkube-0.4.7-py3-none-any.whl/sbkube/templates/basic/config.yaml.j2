# SBKube Configuration
# Generated by: sbkube init

namespace: {{ namespace or project_name }}

apps:
  {{ app_name }}:
    type: {{ app_type }}
    enabled: true
    {% if app_type == 'helm' %}
    chart: ./{{ app_name }}           # Local chart path
    values:
      - {{ app_name }}-values.yaml
    {% elif app_type == 'yaml' %}
    files:
      - {{ app_name }}.yaml
    namespace: {{ namespace or project_name }}
    {% elif app_type == 'http' %}
    url: https://example.com/manifest.yaml
    dest: manifests/{{ app_name }}.yaml
    {% endif %}