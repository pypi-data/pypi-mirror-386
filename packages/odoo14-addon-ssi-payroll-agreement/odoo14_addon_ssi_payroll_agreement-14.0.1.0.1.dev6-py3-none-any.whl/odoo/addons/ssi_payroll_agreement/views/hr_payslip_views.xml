<odoo>
    <record id="hr_payslip_view_form" model="ir.ui.view">
    <field name="name">hr.employee.payroll.agreement.form</field>
    <field name="model">hr.payslip</field>
    <field name="mode">extension</field>
    <field name="inherit_id" ref="ssi_hr_payroll.hr_payslip_view_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='job_id']" position="after">
                <field name="method" invisible="1" />
                <field
                        name="payroll_agreement_id"
                        readonly="1"
                        attrs="{'invisible':['|',('method','=', False),('method','=','manual')]}"
                        force_save="1"
                    />
            </xpath>
        </data>
    </field>
</record>
</odoo>
