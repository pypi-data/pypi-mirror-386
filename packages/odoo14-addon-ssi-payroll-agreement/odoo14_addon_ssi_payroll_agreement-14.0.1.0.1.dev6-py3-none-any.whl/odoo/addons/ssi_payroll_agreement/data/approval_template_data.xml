<odoo noupdate="1">
<record id="payroll_agreement_approval_template" model="approval.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_payroll_agreement" />
    <field name="sequence" eval="100" />
    <field name="computation_method">use_python</field>
    <field name="python_code">result = True</field>
    <field name="validate_sequence" eval="1" />
</record>
<record
        id="payroll_agreement_approval_template_detail"
        model="approval.template_detail"
    >
    <field name="template_id" ref="payroll_agreement_approval_template" />
    <field name="approver_selection_method">use_group</field>
    <field
            name="approver_group_ids"
            eval="[(6,0,[ref('payroll_agreement_validator_group')])]"
        />
</record>
</odoo>
