<odoo noupdate="1">
<record id="payroll_agreement_policy_template" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_payroll_agreement" />
    <field
            name="state_field_id"
            search="[('model_id.model','=','payroll_agreement'),('name','=','state')]"
        />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- Payroll Agreement: confirm_ok -->
<record id="payroll_agreement_policy_template_confirm" model="policy.template_detail">
    <field name="template_id" ref="payroll_agreement_policy_template" />
    <field
            name="field_id"
            search="[('model_id.model','=','payroll_agreement'),('name','=','confirm_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','payroll_agreement'),('value','=','draft')]"
        />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field name="group_ids" eval="[(6,0,[ref('payroll_agreement_user_group')])]" />
    <field name="restrict_additional" eval="0" />
</record>

<!-- Payroll Agreement: approve_ok -->
<record id="payroll_agreement_policy_template_approve" model="policy.template_detail">
    <field name="template_id" ref="payroll_agreement_policy_template" />
    <field
            name="field_id"
            search="[('model_id.model','=','payroll_agreement'),('name','=','approve_ok')]"
        />
    <field name="restrict_state" eval="1" />
    <field
            name="state_ids"
            search="[('field_id.model_id.model','=','payroll_agreement'),('value','=','confirm')]"
        />
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

