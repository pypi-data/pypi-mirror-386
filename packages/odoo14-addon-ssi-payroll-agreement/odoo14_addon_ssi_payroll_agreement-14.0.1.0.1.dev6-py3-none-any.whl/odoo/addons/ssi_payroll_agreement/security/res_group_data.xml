<odoo>
<!-- Configurator -->
<record id="payroll_agreement_type_group" model="res.groups">
    <field name="name">Payroll Agreement Type</field>
    <field name="category_id" ref="payroll_agreement_configurator_module_category" />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>
<record id="payroll_agreement_input_type_configurator_group" model="res.groups">
    <field name="name">Payroll Agreement Input Type</field>
    <field name="category_id" ref="payroll_agreement_configurator_module_category" />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>
<!-- Workflow -->
<record id="payroll_agreement_viewer_group" model="res.groups">
    <field name="name">Viewer</field>
    <field name="category_id" ref="payroll_agreement_module_category" />
</record>

<record id="payroll_agreement_user_group" model="res.groups">
    <field name="name">User</field>
    <field name="category_id" ref="payroll_agreement_module_category" />
    <field name="implied_ids" eval="[(4, ref('payroll_agreement_viewer_group'))]" />
</record>

<record id="payroll_agreement_validator_group" model="res.groups">
    <field name="name">Validator</field>
    <field name="category_id" ref="payroll_agreement_module_category" />
    <field name="implied_ids" eval="[(4, ref('payroll_agreement_user_group'))]" />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>

<!-- Data Ownership -->
<record id="payroll_agreement_direct_subordinate_group" model="res.groups">
    <field name="name">Direct Subordinate</field>
    <field name="category_id" ref="payroll_agreement_data_ownership_module_category" />
</record>

<record id="payroll_agreement_direct_all_subordinate_group" model="res.groups">
    <field name="name">All Subordinate</field>
    <field name="category_id" ref="payroll_agreement_data_ownership_module_category" />
    <field
            name="implied_ids"
            eval="[(4, ref('payroll_agreement_direct_subordinate_group'))]"
        />
</record>

<record id="payroll_agreement_company_group" model="res.groups">
    <field name="name">Company</field>
    <field name="category_id" ref="payroll_agreement_data_ownership_module_category" />
    <field
            name="implied_ids"
            eval="[(4, ref('payroll_agreement_direct_all_subordinate_group'))]"
        />
</record>

<record id="payroll_agreement_company_child_group" model="res.groups">
    <field name="name">Company and All Child Companies</field>
    <field name="category_id" ref="payroll_agreement_data_ownership_module_category" />
    <field name="implied_ids" eval="[(4, ref('payroll_agreement_company_group'))]" />
</record>

<record id="payroll_agreement_all_group" model="res.groups">
    <field name="name">All</field>
    <field name="category_id" ref="payroll_agreement_data_ownership_module_category" />
    <field
            name="implied_ids"
            eval="[(4, ref('payroll_agreement_company_child_group'))]"
        />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>

</odoo>
