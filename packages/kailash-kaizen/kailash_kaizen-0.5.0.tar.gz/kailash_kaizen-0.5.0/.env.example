# Kaizen Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Environment Configuration
# ============================================================================

# Environment name: dev, staging, or prod
KAIZEN_ENV=dev

# Logging configuration
LOG_LEVEL=INFO

# ============================================================================
# LLM Provider API Keys
# ============================================================================

# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ============================================================================
# Database Configuration (Optional)
# ============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://kaizen:your-password-here@localhost:5432/kaizen

# ============================================================================
# Redis Configuration (Optional)
# ============================================================================

# Redis connection string for caching and queues
# Format: redis://host:port/db
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Application Configuration
# ============================================================================

# Maximum number of worker threads
MAX_WORKERS=4

# Request timeout in seconds
TIMEOUT=30

# ============================================================================
# Monitoring and Observability (Optional)
# ============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=your-sentry-dsn-here

# Enable debug mode (development only)
DEBUG=false

# ============================================================================
# Observability Infrastructure (Phase 4: Systems 3-7)
# ============================================================================

# Jaeger OpenTelemetry Collector endpoint (for distributed tracing)
# Default: http://localhost:4317 (OTLP gRPC)
JAEGER_ENDPOINT=http://localhost:4317

# Jaeger UI endpoint (for viewing traces)
# Default: http://localhost:16686
JAEGER_UI_ENDPOINT=http://localhost:16686

# Prometheus scraping endpoint (for metrics collection)
# Default: http://localhost:9090
PROMETHEUS_ENDPOINT=http://localhost:9090

# ELK Stack endpoint (for structured logging)
# Default: http://localhost:9200 (Elasticsearch)
ELK_ENDPOINT=http://localhost:9200
