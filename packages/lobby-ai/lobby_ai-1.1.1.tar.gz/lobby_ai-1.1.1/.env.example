# OpenRouter API Configuration (BYOK - Bring Your Own Key)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Doorman License & Billing (Phase 2)
DOORMAN_LICENSE_KEY=your_premium_license_key
DOORMAN_BACKEND_URL=https://api.doorman.dev

# Database Configuration  
DOORMAN_DATA_DIR=~/.doorman
DOORMAN_DATABASE_URL=sqlite:///~/.doorman/doorman.db

# Development & Debug
DEBUG=false
LOG_LEVEL=info

# Stripe Configuration (Phase 2 - Billing Server)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8080

# Feature Flags
ENABLE_TELEMETRY=true
ENABLE_SPRITE_ANIMATIONS=true
ENABLE_CREDITS_SYSTEM=false