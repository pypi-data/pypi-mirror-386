{
    "includeCoAuthoredBy": false,
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Edit|MultiEdit|Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": "uv run ruff check --fix --unsafe-fixes"
                    }
                ]
            },
            {
                "matcher": "Write",
                "hooks": [
                    {
                        "type": "command",
                        "command": "uv run mypy --config-file pyproject.toml ."
                    }
                ]
            }
        ]
    }
}