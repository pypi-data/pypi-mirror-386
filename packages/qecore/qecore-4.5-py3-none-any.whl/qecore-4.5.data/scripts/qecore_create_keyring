#!python

try:
    from gi import require_version
    require_version('Secret', '1')
    from gi.repository import Secret
except Exception as error:
    assert False, "".join((
        f"Import of required libraries failed, ",
        f"which is required for correct keyring setup: {error}"
    ))

try:
    Secret.Collection.create_sync(None, "default", "default", 0, None)
except Exception as error:
    raise Exception(f"Failed to create the collection: '{error}'")
