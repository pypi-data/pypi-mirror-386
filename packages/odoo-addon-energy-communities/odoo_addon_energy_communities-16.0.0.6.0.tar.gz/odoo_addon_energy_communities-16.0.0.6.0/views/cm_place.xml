<odoo>
  <record id="view_places_search" model="ir.ui.view">
    <field name="name">cm.places.search</field>
    <field name="model">cm.place</field>
    <field name="inherit_id" ref="community_maps_key_submissions.view_places_search" />
    <field name="type">search</field>
    <field name="arch" type="xml">
      <filter name="key_submissions_target_reached" position="before">
        <filter
          name="key_group_activated"
          string="Key Group activated"
          domain="[('key_group_activated','=', True)]"
        />
        <filter
          name="not_key_group_activated"
          string="Key Group NOT activated"
          domain="[('key_group_activated','=', False)]"
        />
        <separator/>
      </filter>
    </field>
  </record>
  <record id="view_places_form" model="ir.ui.view">
    <field name="name">cm.places.form</field>
    <field name="model">cm.place</field>
    <field name="inherit_id" ref="community_maps.view_places_form" />
    <field name="type">form</field>
    <field name="arch" type="xml">
      <field name="map_id" position="after">
        <field name="landing_id" />
        <field name="user_current_role" invisible="1" />
        <field name="key_group_activated" attrs="{'readonly': [('user_current_role','!=','role_platform_admin')]}" />
      </field>
    </field>
    </record>
</odoo>
