<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_create_users_wizard_form" model="ir.ui.view">
            <field name="name">create_users.wizard.form</field>
            <field name="model">create.users.wizard</field>
            <field name="arch" type="xml">
              <form>
                <sheet>
                  <p>
                    Select the stages to be covered by each partner (the selection of a stage implies the execution of the precedents):
                  </p><br />
                  <group>
                        <field name="action" widget="radio" />
                  </group>
                  <group>
                        <field
                name="force_invite"
                attrs="{'invisible': [('action', '!=', 'invite_user_through_kc')]}"
              />
                  </group>
                </sheet>
                <footer>
                        <button
              name="execute"
              string="Execute"
              type="object"
              class="btn-primary"
            />
                        <button
              string="Cancelar"
              class="btn-secondary"
              special="cancel"
            />
                    </footer>
              </form>
            </field>
        </record>
    </data>
</odoo>
