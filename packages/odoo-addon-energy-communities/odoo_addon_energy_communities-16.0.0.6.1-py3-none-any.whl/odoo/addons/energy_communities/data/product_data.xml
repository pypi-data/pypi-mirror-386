<odoo>

  <record id="product_category_pack" model="product.category">
    <field name="name">Packs</field>
    <field name="data_xml_id">energy_communities.product_category_pack</field>
  </record>

  <record id="product_category_service" model="product.category">
    <field name="name">Services</field>
    <field name="data_xml_id">energy_communities.product_category_service</field>
  </record>

  <record id="product_category_recurring_fee_service" model="product.category">
    <field name="name">Recurring fee Service</field>
    <field
      name="parent_id"
      model="product.category"
      eval="obj(ref('energy_communities.product_category_service')).id"
    />
    <field name="data_xml_id">energy_communities.product_category_recurring_fee_service</field>
  </record>

  <record id="product_category_recurring_fee_pack" model="product.category">
    <field name="name">Recurring fee Pack</field>
    <field
      name="parent_id"
      model="product.category"
      eval="obj(ref('energy_communities.product_category_pack')).id"
    />
    <field name="data_xml_id">energy_communities.product_category_recurring_fee_pack</field>
  </record>

  <record id="product_category_share_recurring_fee_pack" model="product.category">
    <field name="name">Share with recurring fee Pack</field>
    <field
      name="parent_id"
      model="product.category"
      eval="obj(ref('energy_communities.product_category_pack')).id"
    />
    <field name="data_xml_id">energy_communities.product_category_share_recurring_fee_pack</field>
  </record>

  <record id="product_category_share_recurring_fee_service" model="product.category">
    <field name="name">Share recurring fee Service</field>
    <field
      name="parent_id"
      model="product.category"
      eval="obj(ref('energy_communities.product_category_service')).id"
    />
    <field name="data_xml_id">product_category_share_recurring_fee_service</field>
  </record>

</odoo>
