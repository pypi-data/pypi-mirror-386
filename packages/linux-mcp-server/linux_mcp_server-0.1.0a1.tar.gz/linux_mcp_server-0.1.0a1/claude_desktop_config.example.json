{
  "mcpServers": {
    "linux-diagnostics": {
      "command": "uv",
      "args": [
        "--directory",
        "/absolute/path/to/linux-mcp-server",
        "run",
        "linux-mcp-server"
      ],
      "env": {
        "LINUX_MCP_ALLOWED_LOG_PATHS": "/var/log/messages,/var/log/secure,/var/log/audit/audit.log",
        "LINUX_MCP_LOG_LEVEL": "INFO",
        "LINUX_MCP_SSH_KEY_PATH": "/home/user/.ssh/id_ed25519"
      }
    }
  }
}

