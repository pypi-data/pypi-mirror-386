<a href="{{ entity | url }}" class="nav-secondary-action search-result-target">
    <div class="search-result-description">
        {{ entity.label | localize }}
        <div class="search-result-file-type">{% trans %}Media{% endtrans %}</div>
    </div>
    {% if entity.media_type and entity.media_type.type== 'image' %}
        <div class="search-result-preview">
            <img src="{{ ('betty-static://' ~ entity | image_resize_cover((50, 50))) | url }}" class="image"{% if entity.description %} alt="{{ entity.description | localize }}"{% endif %}>
        </div>
    {% endif %}
</a>
