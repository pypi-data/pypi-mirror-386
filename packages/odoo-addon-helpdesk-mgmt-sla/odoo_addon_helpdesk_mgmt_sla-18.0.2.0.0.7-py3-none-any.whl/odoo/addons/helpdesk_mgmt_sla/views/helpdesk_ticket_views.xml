<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="inherit_view_helpdesk_ticket_kanban">
        <field name="name">inherit_view_helpdesk_ticket_kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.view_helpdesk_ticket_kanban" />
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="inside">
                <field name="sla_deadline" />
            </xpath>
            <xpath expr="//field[@name='activity_ids']" position="after">
                <div t-if="record.sla_deadline.raw_value">
                    <span class="fw-bold">
                        <field name="sla_deadline" widget="remaining_days" />
                    </span>
                </div>
            </xpath>
        </field>
    </record>
    <record id="inherit_helpdesk_ticket_view_form" model="ir.ui.view">
        <field name="name">inherit.helpdesk.ticket.form.view</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.ticket_view_form" />
        <field name="priority" eval="20" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='assign_to_me']" position="after">
                <button
                    name="refresh_sla"
                    type="object"
                    string="Set SLA"
                    class="btn btn-secondary o_form_button_helpdesk_sla"
                    invisible="sla_fits"
                />
            </xpath>
            <xpath expr="//div[hasclass('oe_title')]" position="inside">
                <div class="d-flex mb-4" invisible="not team_sla or not ticket_sla_ids">
                    <field
                        name="ticket_sla_ids"
                        widget="many2many_tags"
                        options="{'no_create': True, 'color_field': 'color', 'no_edit_color': True}"
                    />
                    <div class="align-items-center d-inline-flex text-muted">
                        <i
                            class="fa fa-lg fa-clock-o mx-2"
                            aria-label="SLA Deadline"
                            title="SLA Deadline"
                        />
                        <field name="sla_deadline" widget="remaining_days" />
                        <field name="sla_fits" invisible="1" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="helpdesk_ticket_view_search" model="ir.ui.view">
        <field name="name">inherit.helpdesk.ticket.search.view</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk_mgmt.helpdesk_ticket_view_search" />
        <field name="arch" type="xml">
            <group position="before">
                <separator />
                <filter
                    name="sla_expired"
                    string="SLA Expired"
                    domain="[('sla_expired','=', True)]"
                />
                <filter
                    name="sla_not_expired"
                    string="SLA Not Expired"
                    domain="[('sla_expired','=', False)]"
                />
            </group>
        </field>
    </record>
</odoo>
