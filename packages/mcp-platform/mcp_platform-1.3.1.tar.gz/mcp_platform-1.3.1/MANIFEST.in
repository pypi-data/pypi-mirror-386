# Include all relevant files from mcp_platform/template/templates and subdirectories
recursive-include mcp_platform/template/templates *.yaml *.yml *.json *.py
# Exclude all test, tests, and test_* files/directories
prune tests/
prune mcp_platform/template/templates/test
prune mcp_platform/template/templates/tests
global-exclude tests/
global-exclude mcp_platform/template/templates/**/test
global-exclude mcp_platform/template/templates/**/tests
