<?xml version="1.0" encoding="utf-8"?>
<!--
IR Sequence Data
================

This file defines the sequence configuration for distribution table numbering.
The sequence generates automatic codes for distribution tables with the format "DT001", "DT002", etc.

Main functionality:
- Automatic numbering for distribution tables
- Prefix "DT" with 3-digit padding
- Sequential numbering starting from 001
-->
<odoo>
    <data>
        
        <!-- Sequence: Distribution Table Automatic Numbering -->
        <record id="distribution_table_sequence" model="ir.sequence">
            <field name="name">Distribution Table Sequence</field>
            <field name="code">energy_selfconsumption.distribution_table</field>
            <field name="prefix">DT</field>
            <field name="padding">3</field>
            <field name="number_next" eval="1" />
            <field name="number_increment" eval="1" />
        </record>
        
    </data>
</odoo>
