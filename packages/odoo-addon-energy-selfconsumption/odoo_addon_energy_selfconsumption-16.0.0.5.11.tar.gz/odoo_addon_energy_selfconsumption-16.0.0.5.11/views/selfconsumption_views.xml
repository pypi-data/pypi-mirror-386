<?xml version="1.0" encoding="utf-8" ?>
<!--
Self-consumption Project Views
==============================

This file contains the main views for managing energy self-consumption projects.
Includes complete forms, tree views, actions and menus.

Main functionalities:
- Main form with state workflow (draft → inscription → activation → active)
- Public inscription form configuration
- Invoicing mode management (power acquired, energy delivered, custom energy)
- Action buttons for importing/exporting data
- Integration with distribution tables and contracts
- Authorization and coefficient sharing reports
-->
<odoo>
    <data>

        <!-- Main Form View: Self-consumption Project -->
        <record id="selfconsumption_form_view" model="ir.ui.view">
            <field name="name">energy_selfconsumption.selfconsumption.form</field>
            <field name="model">energy_selfconsumption.selfconsumption</field>
            <field name="arch" type="xml">
                <form string="Self-consumption Project">
                    
                    <!-- Header with workflow buttons and status bar -->
                    <header>
                        <!-- Workflow advance buttons -->
                        <button type="object"
                                string="Advance to In Inscription"
                                name="set_inscription"
                                attrs="{'invisible':[('state','not in',['draft'])]}"
                                class="btn btn-primary" />
                        
                        <button type="object"
                                string="Advance to Activation"
                                name="set_in_activation_state"
                                attrs="{'invisible':[('state','not in',['inscription'])]}"
                                class="btn btn-primary" />

                        <button type="object"
                                string="Define Invoicing Mode"
                                name="set_invoicing_mode"
                                attrs="{'invisible':['|',('state','not in',['activation']),('invoicing_mode', '!=', False)]}"
                                class="btn btn-primary" />
                        
                        <button type="object"
                                string="Advance to Active"
                                name="activate"
                                attrs="{'invisible':['|',('state','not in',['activation']),('invoicing_mode', '=', False)]}"
                                class="btn btn-primary" />
                        
                        <!-- Workflow rollback buttons -->
                        <button type="object"
                                string="Return to In Inscription"
                                name="set_inscription_activation"
                                attrs="{'invisible':[('state','not in',['activation'])]}"
                                confirm="Are you sure you want to change the project status to the previous step?
                                         If so, the distribution table will return to the 'validated' state." />
                        
                        <button type="object"
                                string="Return to Draft"
                                name="set_draft"
                                attrs="{'invisible':[('state','not in',['inscription'])]}" />
                        
                        <!-- Data management buttons -->
                        <button type="action"
                                name="%(energy_selfconsumption.button_action_selfconsumption_import_wizard)d"
                                string="Import Participants &amp; Supply Points"
                                attrs="{'invisible':[('state','not in',['draft', 'inscription'])]}"
                                help="Import participant inscriptions and supply point data from CSV files" />
                        
                        <button type="object"
                                string="Export CSV Inscriptions"
                                name="action_export_csv_inscriptions_wizard"
                                attrs="{'invisible':[('state','not in',['draft', 'inscription'])]}" />
                        
                        <button type="action"
                                string="Review bank accounts"
                                name="%(energy_selfconsumption.button_action_set_iban_inscriptions)d"
                                attrs="{'invisible':[('state','not in',['activation', 'active'])]}" />
                        
                        <!-- Configuration buttons -->
                        <button type="action"
                                string="Change distribution table"
                                context="{'default_selfconsumption_project_id': id}"
                                name="%(energy_selfconsumption.button_action_change_distribution_table_import_wizard)d"
                                attrs="{'invisible':[('state', '!=', 'active')]}" />
                        
                        <button type="object"
                                string="Set new distribution table"
                                name="set_new_distribution_table"
                                attrs="{'invisible':[('state', '!=', 'active')]}"
                                confirm="Are you sure you want to set a new distribution table?" />

                        <!-- Workflow status bar -->
                        <field name="state"
                               widget="statusbar"
                               readonly="True"
                               statusbar_visible="draft,inscription,activation,active" />
                    </header>
                    <sheet>
                        <!-- Statistical buttons box -->
                        <div class="oe_button_box" name="button_box">
                            <!-- Button: Inscriptions -->
                            <button class="oe_stat_button"
                                    type="object"
                                    name="get_inscriptions_view"
                                    icon="fa-pencil-square-o"
                                    context="{'default_effective_date': today}">
                                <field string="Inscriptions"
                                       name="inscription_count"
                                       widget="statinfo" />
                            </button>

                            <!-- Button: Distribution Tables -->
                            <button class="oe_stat_button"
                                    type="object"
                                    name="get_distribution_tables_view"
                                    icon="fa-table"
                                    attrs="{'invisible': [('state', '==', 'draft')]}">
                                <field string="Distribution Tables"
                                       name="distribution_table_count"
                                       widget="statinfo" />
                            </button>

                            <!-- Button: Sale Orders (admin only) -->
                            <button class="oe_stat_button"
                                    type="object"
                                    name="get_sale_orders_view"
                                    icon="fa-files-o"
                                    attrs="{'invisible': [('state', '==', 'draft')]}"
                                    groups="energy_communities.role_platform_admin_res_groups">
                                <field string="Sale Orders"
                                       name="sale_orders_count"
                                       widget="statinfo" />
                            </button>

                            <!-- Button: Contracts -->
                            <button class="oe_stat_button"
                                    type="object"
                                    name="get_contracts_view"
                                    icon="fa-book"
                                    attrs="{'invisible': [('state', '!=', 'active')]}">
                                <field string="Contracts"
                                       name="contracts_count"
                                       widget="statinfo" />
                            </button>
                        </div>
                        
                        <!-- Archived indicator -->
                        <widget name="web_ribbon"
                                text="Archived"
                                bg_color="bg-danger"
                                attrs="{'invisible': [('active', '=', True)]}" />
                        
                        <!-- Hidden control fields -->
                        <field name="active" invisible="True" />
                        
                        <!-- Project title -->
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name"
                                       placeholder="Title"
                                       attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}" />
                            </h1>
                        </div>
                        <group>
                            <!-- Left column: Project technical data -->
                            <group>
                                <!-- Hidden control fields -->
                                <field name="company_id" invisible="True" />
                                <field name="id" invisible="True" />
                                <field name="type" invisible="True" />
                                
                                <!-- Identification codes -->
                                <field name="code"
                                       attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}" />
                                <field name="cil"
                                       attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}" />
                                
                                <!-- Technical characteristics -->
                                <field name="power"
                                       attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}" />
                                
                                <!-- Project responsible parties -->
                                <field name="owner_id"
                                       attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}" />
                                <field name="supplier_id"
                                       attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}"
                                       options="{'no_create': True, 'no_edit':True, 'no_open': True}" />
                                
                                <!-- Cadastral reference -->
                                <field name="cadastral_reference"
                                       attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}" />
                            </group>
                            
                            <!-- Right column: Project address -->
                            <group>
                                <span class="o_form_label o_td_label" name="address_name">
                                    <b>Address</b>
                                </span>
                                <div class="o_address_format">
                                    <field name="street"
                                           placeholder="Street..."
                                           class="o_address_street"
                                           attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}" />
                                    <field name="street2"
                                           placeholder="Street 2..."
                                           class="o_address_street"
                                           attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}" />
                                    <field name="city"
                                           placeholder="City"
                                           class="o_address_city"
                                           attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}" />
                                    <field name="state_id"
                                           class="o_address_state"
                                           placeholder="State"
                                           options="{'no_open': True, 'no_quick_create': True}"
                                           context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"
                                           attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}" />
                                    <field name="zip"
                                           placeholder="ZIP"
                                           class="o_address_zip"
                                           attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}" />
                                    <field name="country_id"
                                           placeholder="Country"
                                           class="o_address_country"
                                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"
                                           attrs="{'readonly': [('state', 'not in', ['draft', 'activation'])]}" />
                                </div>
                            </group>
                        </group>

                        <notebook colspan="4">
                                                        <page
                string="Inscription form configuration"
                name="form_configuration"
                autofocus="autofocus"
              >
                                <field name="conf_state" widget="radio" invisible="1" />
                                <button
                  class="btn btn btn-primary"
                  type="object"
                  name="activate_form"
                  attrs="{'invisible': [('conf_state', '==', 'active')]}"
                >Activate form</button>
                                <button
                  class="btn btn btn-primary"
                  type="object"
                  name="unactivate_form"
                  attrs="{'invisible': [('conf_state', '!=', 'active')]}"
                >Unactivate form</button>
                                <span style="margin: 0px 10px;"></span>
                                <button
                  class="btn btn-secondary"
                  type="object"
                  name="action_redirect_to_page_form_inscription"
                  attrs="{'invisible': [('conf_state', '!=', 'active')]}"
                >View form inscription</button>
                                <field
                  style="margin-left: 50px;"
                  name="conf_url_form"
                  readonly="1"
                  force_save="1"
                  attrs="{'invisible': [('conf_state', '!=', 'active')]}"
                />
                                <group name="conf_show" string="Configuration">
                                    <field
                    name="conf_used_in_selfconsumption"
                    attrs="{'readonly': [('conf_state', '==', 'active')]}"
                  />
                                    <field
                    name="conf_vulnerability_situation"
                    attrs="{'readonly': [('conf_state', '==', 'active')]}"
                  />
                                    <field
                    name="conf_bank_details"
                    attrs="{'readonly': [('conf_state', '==', 'active')]}"
                  />
                                </group>
                                <group name="conf_participation" string="Participation">
                                    <field
                    name="conf_participation_ids"
                    widget="one2many"
                    mode="list"
                    context="{'default_project_id':id}"
                    attrs="{'readonly': [('conf_state', '==', 'active')]}"
                  >
                                        <tree>
                                            <field name="name" />
                                            <field name="quantity" />
                                        </tree>
                                        <form>
                                            <group>
                                              <field name="name" />
                                              <field name="quantity" />
                                            </group>
                                        </form>
                                    </field>
                                </group>
                                <group
                  name="conf_header_description"
                  string="Description form"
                >
                                    <field
                    name="conf_header_description"
                    attrs="{'readonly': [('conf_state', '==', 'active')]}"
                  />
                                </group>
                            </page>
                            <page
                string="Invoicing Mode"
                name="invoicing_mode"
                attrs="{'invisible':[('invoicing_mode', '==', False)]}"
              >
                                <group>
                                    <field name="invoicing_mode" readonly="True" />
                                    <field name="product_id" readonly="True" />
                                    <field
                                      name="contract_template_id"
                                      readonly="True"
                                    />
                                    <field name="pricelist_id" readonly="1"/>
                                    <field name="recurring_rule_type" attrs="{'readonly': True}" />
                                    <field name="recurring_interval" attrs="{'readonly': True}" />
                                    <field name="recurring_invoicing_type" attrs="{'readonly': True}" />
                                    <field name="payment_mode_id" attrs="{'readonly': True}" />
                                </group>
                            </page>
                              <page string="External Services" name="energy_services">
                                <group>
                                    <field name="service_contract_ids" />
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="selfconsumption_tree_view" model="ir.ui.view">
            <field name="name">energy_selfconsumption.selfconsumption.tree</field>
            <field name="model">energy_selfconsumption.selfconsumption</field>
            <field name="arch" type="xml">
                <tree string="Self-Consumption Projects"
                      decoration-info="state == 'inscription'"
                      decoration-warning="state == 'activation'" 
                      decoration-success="state == 'active'">
                    <field name="name" />
                    <field name="street" />
                    <field name="city" />
                    <field name="inscription_count" />
                    <field name="power" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="selfconsumption_form_view_act_window" model="ir.actions.act_window">
            <field name="name">Self-consumption Project</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">energy_selfconsumption.selfconsumption</field>
            <field name="view_mode">tree,form</field>
            <field
        name="context"
        eval="{'default_type': ref('energy_selfconsumption.selfconsumption_project_type')}"
      />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Self-consumption Project.
                </p>
            </field>
        </record>

        <menuitem
      name="Self-consumption Management"
      id="root"
      web_icon="energy_selfconsumption,static/description/icon.png"
    />
        <menuitem name="Management" id="management_category_menu" parent="root" />
        <menuitem
      name="Project"
      id="project_menu"
      parent="management_category_menu"
      action="selfconsumption_form_view_act_window"
    />

        <!--Reports in Action menu-->
        <record id="manager_authorization_report_action" model="ir.actions.server">
            <field name="name">Download Self-consumption Manager Authorization</field>
            <field name="model_id" ref="model_energy_selfconsumption_selfconsumption" />
            <field
        name="binding_model_id"
        ref="model_energy_selfconsumption_selfconsumption"
      />
            <field name="binding_type">action</field>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field
        name="code"
      >action = records.action_manager_authorization_report()</field>
        </record>

        <record id="power_sharing_agreement_report_action" model="ir.actions.server">
            <field name="name">Download Power Sharing Agreement</field>
            <field name="model_id" ref="model_energy_selfconsumption_selfconsumption" />
            <field
        name="binding_model_id"
        ref="model_energy_selfconsumption_selfconsumption"
      />
            <field name="binding_type">action</field>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field
        name="code"
      >action = records.action_power_sharing_agreement_report()</field>
        </record>

        <record
      id="manager_partition_coefficient_report_action"
      model="ir.actions.server"
    >
            <field name="name">Download Partition Coefficient</field>
            <field name="model_id" ref="model_energy_selfconsumption_selfconsumption" />
            <field
        name="binding_model_id"
        ref="model_energy_selfconsumption_selfconsumption"
      />
            <field name="binding_type">action</field>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field
        name="code"
      >action = records.action_manager_partition_coefficient_report()</field>
        </record>
    </data>
</odoo>
