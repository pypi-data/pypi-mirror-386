<?xml version="1.0" encoding="utf-8"?>
<!--
Change Distribution Table Import Wizard Views
==============================================

This file contains views for the distribution table change wizard that manages
the process of updating distribution tables with new inscription data.

Main functionalities:
- Multi-step wizard for distribution table changes
- Different states: old (retain), delete (deregistration), change (update), new (registrations)
- Dynamic title and content based on current state
- Editable trees for different inscription categories
- Navigation between wizard steps
- Integration with inscription management workflow
-->
<odoo>
    <data>

        <!-- Form View: Change Distribution Table Import Wizard -->
        <record id="view_change_distribution_table_import_wizard_form" model="ir.ui.view">
            <field name="name">view.change_distribution_table_import_wizard.form</field>
            <field name="model">change.distribution.table.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Change_distribution_table_import_wizard">
                    <div class="oe_title">
                        <!-- Hidden control fields -->
                        <field name="state" invisible="1"/>
                        
                        <!-- Hidden base data for wizard processing -->
                        <field name="change_distribution_table_import_line_wizard_ids" invisible="1">
                            <tree editable="bottom" create="0">
                                <field name="change_distribution_table_import_wizard_id" 
                                       readonly="1" 
                                       force_save="1"/>
                                <field name="inscription_id" 
                                       readonly="1" 
                                       force_save="1"/>
                                <field name="state" 
                                       readonly="1" 
                                       force_save="1"/>
                                <field name="participation_real_quantity" 
                                       readonly="1" 
                                       force_save="1"/>
                            </tree>
                        </field>
                        
                        <!-- Dynamic titles based on wizard state -->
                        <h1 attrs="{'invisible': [('state', '!=', 'old')]}">
                            Existing participation
                        </h1>
                        <h1 attrs="{'invisible': [('state', '!=', 'delete')]}">
                            Deregistration requests
                        </h1>
                        <h1 attrs="{'invisible': [('state', '!=', 'change')]}">
                            Existing participation modified
                        </h1>
                        <h1 attrs="{'invisible': [('state', '!=', 'new')]}">
                            New participations
                        </h1>
                        
                        <!-- Existing records view (for old, delete, change states) -->
                        <field name="change_distribution_table_import_line_wizard_views_ids" 
                               mode="tree" 
                               nolabel="1" 
                               attrs="{'invisible': ['|', ('state', '=', 'new'), ('change_distribution_table_import_line_wizard_views_ids', '=', [])]}">
                            <tree editable="bottom" create="0">
                                <field name="inscription_id" />
                                <field name="state" />
                                <field name="participation_real_quantity" />
                            </tree>
                        </field>

                        <h3 attrs="{'invisible': ['|', ('state', '=', 'new'), ('change_distribution_table_import_line_wizard_views_ids', '!=', [])]}">
                            No records
                        </h3>
                        
                        <!-- New records view (for new state only) -->
                        <field name="change_distribution_table_import_line_wizard_news_ids" 
                               attrs="{'invisible': ['|', ('state', '!=', 'new'), ('change_distribution_table_import_line_wizard_news_ids', '=', [])]}">
                            <tree editable="bottom" create="0">
                                <field name="change_distribution_table_import_wizard_id" 
                                       invisible="1" 
                                       readonly="1" 
                                       force_save="1"/>
                                <field name="inscription_id" 
                                       readonly="1" 
                                       force_save="1"/>
                                <field name="state" 
                                       readonly="1" 
                                       force_save="1"/>
                                <field name="participation_real_quantity" 
                                       readonly="1" 
                                       force_save="1"/>
                            </tree>
                        </field>

                        <h3 attrs="{'invisible': ['|', ('state', '!=', 'new'), ('change_distribution_table_import_line_wizard_news_ids', '!=', [])]}">
                            No records
                        </h3>
                    </div>
                    
                    <!-- Footer with navigation buttons -->
                    <footer>
                        <button name="next_step" 
                                type="object" 
                                string="Next step" 
                                class="oe_highlight"/>
                        <button name="previous_step" 
                                type="object" 
                                string="Previous step" 
                                class="oe_highlight" 
                                attrs="{'invisible': [('state', '==', 'old')]}"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action Window: Change Distribution Table Import Wizard -->
        <record id="button_action_change_distribution_table_import_wizard" model="ir.actions.act_window">
            <field name="name">Change distribution table</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">change.distribution.table.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>

</odoo>
