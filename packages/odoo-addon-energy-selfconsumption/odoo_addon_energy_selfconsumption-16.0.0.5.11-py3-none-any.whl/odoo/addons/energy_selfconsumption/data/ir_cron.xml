<?xml version="1.0" encoding="utf-8"?>
<!--
IR Cron Jobs
============

This file defines scheduled tasks (cron jobs) for automated self-consumption
project management and billing reminders.

Main scheduled tasks:
- Energy delivered custom invoicing reminders (daily)
- Energy delivered invoicing reminders (daily)
- Power acquired invoicing reminders (daily)

All tasks run daily and send email reminders to administrators for
timely billing and project management.
-->
<odoo>
    <data>
        
        <!-- ========================================== -->
        <!-- INVOICING REMINDER CRON JOBS              -->
        <!-- ========================================== -->
        
        <!-- Cron Job: Energy Delivered Custom Invoicing Reminder -->
        <record id="send_energy_delivered_custom_invoicing_reminder_to_admin" model="ir.cron">
            <field name="name">Send Energy Delivered Custom Invoicing Reminder to Admin User</field>
            <field name="model_id" ref="energy_selfconsumption.model_energy_selfconsumption_selfconsumption" />
            <field name="code">model.send_energy_delivery_custom_invoicing_reminder()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
        </record>

        <!-- Cron Job: Energy Delivered Invoicing Reminder -->
        <record id="send_energy_delivered_invoicing_reminder_to_admin" model="ir.cron">
            <field name="name">Send Energy Delivered Invoicing Reminder to Admin User</field>
            <field name="model_id" ref="energy_selfconsumption.model_energy_selfconsumption_selfconsumption" />
            <field name="code">model.send_energy_delivery_invoicing_reminder()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
        </record>

        <!-- Cron Job: Power Acquired Invoicing Reminder -->
        <record id="send_power_acquired_invoicing_reminder_to_admin" model="ir.cron">
            <field name="name">Send Power Acquired Invoicing Reminder to Admin User</field>
            <field name="model_id" ref="energy_selfconsumption.model_energy_selfconsumption_selfconsumption" />
            <field name="code">model.send_power_acquired_invoicing_reminder()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
            <field name="nextcall">2023-12-01 06:00:00</field>
        </record>

    </data>
</odoo>
