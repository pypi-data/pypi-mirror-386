{% load cfdi_tags %}
<cfdi:Addenda>
  <Multiasistencia xmlns="http://www.diverza.com/ns/addenda/multiasistencia/1" xsi:schemaLocation="http://www.diverza.com/ns/addenda/multiasistencia/1 schema.xsd" Version="1.0" Tipo="{{ tipo }}" Proveedor="{{ clave_proveedor }}" Siniestro="{{ no_siniestro }}" SubTotal="{{ importe}}" IVA="{{ iva }}" IVARet="{{ retencion_iva }}" ISRRet="{{ retencion_isr }}" Total="{{ total }}" OrdenPago="{{ orden_pago }}" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    

    {% if codigo_nags %}
      <Cristales Deducible="{{ cristales_deducible|floatformat:2 }}" CodigoNAGS="{{ codigo_nags|floatformat:2 }}"/>
    {% endif %}

    {% if costo_honorarios %}
      <Honorarios>
        <Servicio OrdenDePagoHonorarios="1" Costo="{{ costo_honorarios|floatformat:2 }}"/>
      </Honorarios>
    {% endif %}

    {% if costo_gruas %}
      <Gruas>
        <Servicio Costo="{{ costo_gruas|floatformat:2 }}"/>
      </Gruas>
    {% endif %}

    {% if costo_asistencia %}
      <Asistencia>
        <Servicio Costo="{{ costo_asistencia|floatformat:2 }}"/>
      </Asistencia>
    {% endif %}

    {% if costo_reparaciones %}
      <Reparaciones {% if num_valuacion_inicial %}NumValuacionInicial="{{ num_valuacion_inicial }}" {% endif %}>
        <ValeRefacciones Costo="{{ costo_reparaciones|floatformat:2 }}" Numero="{{ numero_vale_refacciones }}"/>
      </Reparaciones>
    {% endif %}

    {% if costo_gmedicos %}
      <GMedicos {% if pase_medico %}PaseMedico="{{ pase_medico }}" {% endif %} Costo="{{ costo_gmedicos|floatformat:2 }}"/>
    {% endif %}
  </Multiasistencia>
</cfdi:Addenda>