#preview-modal {
  .content {
    height: 80vh;
  }
  #preview-file-title {
    text-align: center;
    padding: 0;
    margin: 0.5rem 0;
  }
  .file-preview-iframe {
    border-top: none;
    padding: 0;
  }
  .ui.button.close {
    top: 0;
    right: -0.5rem;
  }
}

.ui.modal > .close {
  top: @innerCloseTop;
  right: @innerCloseRight;
  color: @innerCloseColor;
}


.record-share-modal {
  min-height: 35em;

  .share-content {
    padding: 1em;
    min-height: 26em;
  }

  .share-description {
    margin: 1em auto;
  }
}