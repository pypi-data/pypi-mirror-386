{#def d, label=None, isLast=False, label_class=None, content_class=None, separator_class="double separator" #}

{% set field_label = label or d.label(d) if d.label(d) != 'Item does not exist' %}

{% if content %}
{% if field_label %}
<span aria-label="{{field_label}}" class="{% if label_class %}{{label_class}}{% endif %}">
    <strong>
        {{field_label}}: 
    </strong>
</span>
{% endif%}
<span class="{% if content_class %}{{content_class}}{% endif %}">{{content}}</span>
{% if not isLast %}
    <span class="{{separator_class}}"></span>
{% endif %}
{% endif %}