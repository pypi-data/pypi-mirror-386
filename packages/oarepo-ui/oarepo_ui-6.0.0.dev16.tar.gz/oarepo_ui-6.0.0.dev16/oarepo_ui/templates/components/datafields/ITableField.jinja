{# def d, label=None, placeholder=None, keep=false, field_class=None, level=0 #}

{% set field_label = label or d.label(d) if d.label(d) != 'Item does not exist' else '' %}

{%- if ui_value(d) or keep -%}
    <IBaseTableField label={{field_label}} field_class={{field_class}} level={{level}}>
        {%- if content and ((content is not string) or content.strip()) -%}
            {{ content }}
        {%- else -%}
            <IValue value={{ui_value(d)}} />
        {%- endif -%}
    </IBaseTableField>
{%- elif placeholder -%}
    <IBaseTableField label={{field_label}} field_class={{field_class}}>
        {{ placeholder }}
    </IBaseTableField>
{%- endif -%}