        "name": {
          "title": "Name",
          "type": "string"
        },
        "instruction": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Instruction"
        },
        "server_names": {
          "items": {
            "type": "string"
