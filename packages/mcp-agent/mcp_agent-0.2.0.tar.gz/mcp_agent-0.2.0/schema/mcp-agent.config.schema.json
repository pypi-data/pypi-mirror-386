          "title": "Server Names",
          "type": "array"
        },
        "connection_persistence": {
          "default": true,
          "title": "Connection Persistence",
          "type": "boolean"
        }
      },
      "required": [
        "name"
      ],
      "title": "AgentSpec",
      "type": "object"
    },
