# yaml-language-server: $schema=https://apps.kelvininc.com/schemas/kelvin/{{ spec_version }}/{{ app_type }}.json

# YAML (Structure) Spec Version
spec_version: {{ spec_version }}
# Type
type: {{ app_type }}

# Info
name: {{ app_name }}
title: {{ title }}
description: {{ app_description }}
version: {{ app_version }}

# Capabilities
flags:
  enable_runtime_update:
    # Reload Application Configuration in runtime
    configuration: false

# UI JSON schemas (Optional)
ui_schemas:
  # Application Configuration Schema
  configuration: "ui_schemas/configuration.json"

# Defaults (Runtime/Deployment)
defaults:
  # Application Configuration Default Values
  configuration: {}

  # System Settings
  system: {}
