{
    "backends": [

        {
            "backend": "zcp-cicd-backend",
            "config": {
                "file_path": "/application/openapi/zcp/zcp_cicd_backend_openapi_spec.json",
                "prefix": "/api/v1",
                "apis": [
                    {
                        "path":"/api/v1/realms/{realm}/projects/{project}/clusters",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_clusters_of_the_realm_and_project",
                                "description": "Get clusters of the realm and project using the path parameters."
                            }
                        ]
                    },
                    {
                        "path":"/api/v1/realms/{realm}/applications",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_applications_of_the_realm",
                                "description": "Get applications of the realm using the query parameters. e.g.) filter=tag1,tag2"
                            }
                        ]
                    },
                    {
                        "path":"/api/v1/realms/{realm}/projects/{project}/applications",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_applications_of_the_realm_and_project",
                                "description": "Get applications of the realm and project using the query parameters. e.g.) filter=tag1,tag2"
                            }
                        ]
                    },
                    {
                        "path":"/api/v1/realms/{realm}/projects/{project}/applications/{app}",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_application_detail",
                                "description": "Get application detail using the path parameters."
                            }
                        ]
                    },
                    {
                        "path":"/api/v1/realms/{realm}/projects/{project}/applications/{app}/pipelines",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_application_pipelines",
                                "description": "Get application pipelines using the path parameters."
                            }
                        ]
                    },
                    {
                        "path":"/api/v1/realms/{realm}/projects/{project}/applications/{app}/history",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_application_build_history",
                                "description": "Get application build history using the path parameters."
                            }
                        ]
                    },
                    {
                        "path":"/api/v1/realms/{realm}/projects/{project}/deploygroups",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_deploygroups_of_the_realm_and_project",
                                "description": "Get deploygroups of the realm and project using the query parameters. e.g.) filter=tag1,tag2"
                            }
                        ]
                    },
                    {
                        "path":"/api/v1/realms/{realm}/projects/{project}/deploygroups/{deploy_group}",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_deploygroup_detail",
                                "description": "Get deploygroup detail using the path parameters."
                            }
                        ]
                    },
                    {
                        "path":"/api/v1/realms/{realm}/projects/{project}/appdeploys",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_appdeploys_of_the_realm_and_project",
                                "description": "Get appdeploys of the realm and project using the query parameters"
                            }
                        ]
                    },
                    {
                        "path":"/api/v1/realms/{realm}/projects/{project}/appdeploys/{app_deploy}",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_appdeploy_detail",
                                "description": "Get appdeploy detail using the path parameters"
                            }
                        ]
                    },
                    {
                        "path":"/api/v1/realms/{realm}/projects/{project}/appdeploys/{app_deploy}/history",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_appdeploy_deployment_history",
                                "description": "Get appdeploy deployment history using the path parameters"
                            }
                        ]
                    },
                    {
                        "path":"/api/v1/realms/{realm}/appdeploys",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_appdeploys_of_the_realm",
                                "description": "Get appdeploys of the realm using the query parameters. e.g.) filter=tag1,tag2"
                            }
                        ]
                    }
                ]
            }
        }
    ]
}
