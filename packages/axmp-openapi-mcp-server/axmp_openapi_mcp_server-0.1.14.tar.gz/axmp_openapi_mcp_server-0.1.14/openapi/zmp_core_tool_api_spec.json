{
    "backends": [

        {
            "backend": "zcp-core-backend",
            "config": {
                "file_path": "/application/openapi/zcp/zcp_core_backend_openapi_spec.json",
                "prefix": "/api/core/v1",
                "apis": [
                    {
                        "path":"/api/core/v1/realms/{realm}/projects",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_project_list",
                                "description": "Get project list using the path parameters."
                            }
                        ]
                    },
                    {
                        "path":"/api/core/v1/realms/{realm}/projects/{key}",
                        "methods": [
                            {
                                "method": "get",    
                                "tool_name": "get_project_detail",
                                "description": "Get project detail using the path parameters."
                            }
                        ]
                    },
                    {
                        "path":"/api/core/v1/realms/{realm}/groups",
                        "methods": [
                            {
                                "method": "get",    
                                "tool_name": "get_group_list",   
                                "description": "Get group list using the path parameters."
                            }
                        ]
                    },
                    {
                        "path":"/api/core/v1/realms/{realm}/roles",
                        "methods": [
                            {
                                "method": "get",    
                                "tool_name": "get_role_list",   
                                "description": "Get role list using the path parameters."
                            }
                        ]
                    },
                    {
                        "path":"/api/core/v1/realms/{realm}/users",
                        "methods": [
                            {
                                "method": "get",    
                                "tool_name": "get_user_list",   
                                "description": "Get user list using the path parameters."
                            }
                        ]
                    },
                    {
                        "path":"/api/core/v1/realms/{realm}/users/{user}",
                        "methods": [
                            {
                                "method": "get",    
                                "tool_name": "get_user_detail",
                                "description": "Get user detail using the path parameters. The user is the username."
                            }
                        ]
                    },
                    {
                        "path":"/api/core/v1/realms/{realm}/users/{username}/roles",
                        "methods": [
                            {
                                "method": "put",    
                                "tool_name": "assign_realm_roles_to_user",
                                "description": "Assign realm roles to user using the path parameters."
                            }
                        ]
                    },
                    {
                        "path":"/api/core/v1/realms/{realm}/users/{username}/groups",
                        "methods": [
                            {
                                "method": "put",    
                                "tool_name": "assign_groups_to_user",
                                "description": "Assign groups to user using the path parameters."
                            }
                        ]
                    }
                ]
            }
        }
    ]
}
