{
    "backends": [
        {
            "backend": "zcp-alert-backend",
            "config": {
                "file_path": "/Users/kks/IdeaProjects/aiops/axmp-openapi-mcp-server/openapi/zcp/zcp_alert_backend_openapi_spec.json",
                "prefix": "/api/alert/v1",
                "apis": [
                    {
                        "path":"/api/alert/v1/alerts",
                        "methods": ["get"]
                    },
                    {
                        "path":"/api/alert/v1/alerts/{alert_id}",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_alert_detail",
                                "description": "Get alert details by id"
                            }
                        ]
                    },
                    {
                        "path":"/api/alert/v1/alerts/{alert_id}/{action}",
                        "methods": [
                            {
                                "method": "patch",
                                "tool_name": "update_alert_status",
                                "description": "Update alert status for a specific alert"
                            }
                        ]
                    },
                    {
                        "path":"/api/alert/v1/alerts/bulk/{action}",
                        "methods": [
                            {
                                "method": "patch",
                                "tool_name": "bulk_update_alert_status",
                                "description": "Bulk action on alerts for multiple alerts"
                            }
                        ]
                    },
                    {
                        "path":"/api/alert/v1/report/alerts/mtta/trend",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_alert_mtta_trend_data",
                                "description": "Get alert MTTA trend data"
                            }
                        ]
                    },
                    {
                        "path":"/api/alert/v1/report/alerts/mttr/trend",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_alert_mttr_trend_data",
                                "description": "Get alert MTTR trend data"
                            }
                        ]
                    },
                    {
                        "path":"/api/alert/v1/report/alerts/trend/by/priority",
                        "methods": [
                            {
                                "method": "get",
                                "tool_name": "get_number_of_alerts_trend_by_priority",
                                "description": "Get number of alerts trend by priority"
                            }
                        ]
                    }
                ]
            }
        }
    ]
}
