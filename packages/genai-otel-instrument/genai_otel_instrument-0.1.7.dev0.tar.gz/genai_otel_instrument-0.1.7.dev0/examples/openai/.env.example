# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# OpenTelemetry Configuration (Common for all examples)
OTEL_SERVICE_NAME=openai-example
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# OTEL_EXPORTER_OTLP_HEADERS=api-key=your-api-key  # Optional: for authenticated collectors

# Optional: Service instance and environment
# OTEL_SERVICE_INSTANCE_ID=instance-1
# OTEL_ENVIRONMENT=production

# Feature Flags
GENAI_ENABLE_GPU_METRICS=false
GENAI_ENABLE_COST_TRACKING=true
GENAI_ENABLE_MCP_INSTRUMENTATION=false
GENAI_FAIL_ON_ERROR=false

# Logging
GENAI_OTEL_LOG_LEVEL=INFO
