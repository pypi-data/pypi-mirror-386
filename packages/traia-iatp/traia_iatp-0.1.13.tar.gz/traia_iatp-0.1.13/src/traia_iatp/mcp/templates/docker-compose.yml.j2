version: '3.8'

services:
  {{ api_slug }}-mcp:
    build: .
    container_name: {{ api_slug }}-mcp-server
    ports:
      - "8000:8000"
    environment:
      - PORT=8000
      - STAGE=${STAGE:-MAINNET}
      - LOG_LEVEL=${LOG_LEVEL:-INFO}
{% if api_key_env_var %}
      - {{ api_key_env_var }}={% raw %}${{% endraw %}{{ api_key_env_var }}{% raw %}}{% endraw %}
{% endif %}
    volumes:
      - ./logs:/app/logs
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3 