[project]
name = "{{ api_slug }}-mcp-server"
version = "0.1.0"
description = "MCP server for {{ api_name }} API{% if auth_description %} with authentication support{% endif %}"
requires-python = ">=3.12"
dependencies = [
    "fastmcp>=2.12.5",
    "python-dotenv>=1.1.1",
    "requests>=2.32.5",
    "starlette>=0.48.0",
    "retry>=0.9.2",
{% if sdk_package %}
    "{{ sdk_package }}",
{% endif %}
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
include = [
    "server.py",
    "mcp_health_check.py",
] 