<mujoco>

    <asset>
        <!-- Create the watermark overlay material -->
    <texture name="watermark_tex" type="2d" file="../../../shared/v0/sai_logo.png" hflip="true"
      vflip="true" />
        <material name="watermark_mat" texture="watermark_tex" texrepeat="1 1" texuniform="false"
            rgba="1 1 1 0.05" />

    <!-- Grass-like green material for the field - more realistic coloring -->
        <material name="mat_grass" rgba="0.13 0.54 0.13 1" />
    <!-- Grey material for walls and cup - light gray for cup edge -->
        <material name="mat_wall" rgba="0.7 0.7 0.7 1" />
    <!-- White for the golf ball with slight shine -->
        <material name="mat_ball" rgba="0.95 0.95 0.95 1" />
    <!-- Red for the flag -->
        <material name="mat_flag" rgba="1 0 0 1" />
        <material name="flag_red" rgba="1 0 0 1" />
        <material name="pole_white" rgba="0.9 0.9 0.9 1" />
    <!-- Cup material -->
        <material name="mat_cup" rgba="0.1 0.1 0.1 1" />

    </asset>

    <worldbody>
        <body name='golf_course' pos='0 0 0.025'>
            <geom name="watermark" type="plane" pos="0 0 0.0026" size="0.95 0.7 0.0005"
                material="watermark_mat" contype="0" conaffinity="0" />

      <!-- Field geoms -->
            <geom name="field_left" type="box" pos="-0.86 0 0" size="0.14 0.665 0.0025"
                material="mat_grass" friction="0.6 0.005 0.0001" solimp="0.95 0.99 0.001"
                solref="0.01 1" condim="3" />
            <geom name="field_right" type="box" pos="0.1933 0 0" size="0.8067 0.665 0.0025"
                material="mat_grass" friction="0.6 0.005 0.0001" solimp="0.95 0.99 0.001"
                solref="0.01 1" condim="3" />
            <geom name="field_top" type="box" pos="-0.6667 0.3591 0" size="0.0533 0.3059 0.0025"
                material="mat_grass" friction="0.6 0.005 0.0001" solimp="0.95 0.99 0.001"
                solref="0.01 1" condim="3" />
            <geom name="field_bottom" type="box" pos="-0.6667 -0.3591 0" size="0.0533 0.3059 0.0025"
                material="mat_grass" friction="0.6 0.005 0.0001" solimp="0.95 0.99 0.001"
                solref="0.01 1" condim="3" />

      <!-- Boundary walls -->
            <geom name="wall_north" type="box" pos="0 0.665 0.0125" size="1.0 0.0166 0.0125"
                material="mat_wall" friction="0.3 0.1 0.05" solimp="0.8 0.9 0.01" solref="0.02 1" />
            <geom name="wall_south" type="box" pos="0 -0.665 0.0125" size="1.0 0.0166 0.0125"
                material="mat_wall" friction="0.3 0.1 0.05" solimp="0.8 0.9 0.01" solref="0.02 1" />
            <geom name="wall_west" type="box" pos="-1.0 0 0.0125" size="0.0167 0.665 0.0125"
                material="mat_wall" friction="0.3 0.1 0.05" solimp="0.8 0.9 0.01" solref="0.02 1" />
            <geom name="wall_east" type="box" pos="1.0 0 0.0125" size="0.0167 0.665 0.0125"
                material="mat_wall" friction="0.3 0.1 0.05" solimp="0.8 0.9 0.01" solref="0.02 1" />

      <!-- Cup geoms -->
            <geom name="cup_wall_top" type="box" pos="-0.6667 0.0566 -0.0125"
                size="0.0533 0.0033 0.0125" material="mat_cup" friction="0.1 0.005 0.0001"
                solimp="0.95 0.99 0.001" solref="0.01 1" />
            <geom name="cup_wall_bottom" type="box" pos="-0.6667 -0.0566 -0.0125"
                size="0.0533 0.0033 0.0125" material="mat_cup" friction="0.1 0.005 0.0001"
                solimp="0.95 0.99 0.001" solref="0.01 1" />
            <geom name="cup_wall_left" type="box" pos="-0.7233 0 -0.0125"
                size="0.0033 0.0532 0.0125" material="mat_cup" friction="0.1 0.005 0.0001"
                solimp="0.95 0.99 0.001" solref="0.01 1" />
            <geom name="cup_wall_right" type="box" pos="-0.6100 0 -0.0125"
                size="0.0033 0.0532 0.0125" material="mat_cup" friction="0.1 0.005 0.0001"
                solimp="0.95 0.99 0.001" solref="0.01 1" />
            <geom name="cup_base" type="box" pos="-0.6667 0 -0.025" size="0.0533 0.0532 0.0025"
                material="mat_cup" friction="0.1 0.005 0.0001" solimp="0.8 0.9 0.01" solref="0.02 1" />

      <!-- Flag -->
            <body name="flag_assembly" pos="-0.6867 0 0">
                <geom name="flag_pole" type="cylinder" pos="0 0 0.125" size="0.001 0.125"
                    material="pole_white" />
                <geom name="flag" type="box" pos="0 0.0233 0.225" size="0.0003 0.0233 0.0125"
                    material="flag_red" />
            </body>
        </body>

        <body name='golf_ball' pos='0.5 0 0.038'>
            <joint name="env:ball" type="free"></joint>
            <geom name='golf_ball' type='sphere' size='0.015' material='mat_ball' mass="0.001" />
        </body>

        <body name='golf_club' pos='0.7 0 0.025' quat='0.707105 0 0 -0.707105'>
            <joint name="env:club" type="free" damping="0.01"></joint>
            <body name="head_link" pos="0 0 0">
                <geom name="head_collision" type="box" size="0.04 0.01 0.03" pos="0 0 0.03"
                    mass="0.02" />
        <!-- Grip connection -->
                <body name="grip_link" pos="0 0 0.11">
                    <geom name="grip_collision" type="box" size="0.01 0.01 0.1" pos="0 0 0.05"
                        condim="4" solimp="0.999 0.999 0.001" solref="0.001 1"
                        friction="0.95 0.3 0.1" mass="0.02" />
                </body>
            </body>
        </body>
    </worldbody>
</mujoco>
