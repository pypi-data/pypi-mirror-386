<mujoco model="football">

    <asset>
        <!-- Overhead field texture and logo -->
        <mesh name="soccer_field" file="../meshes/pitch_l.obj"/>
        <mesh name="goal_north" file="../meshes/goal_north.obj"/>
        <mesh name="defender" file="../meshes/defender.obj" scale="1.0 0.8 0.6"/>
        <mesh name="goalkeeper" file="../meshes/goalkeeper.obj" scale="0.35 0.35 0.35"/>

    <texture name="logo_tex" type="2d" file="../../../shared/v0/sai_logo.png" />
        <texture name="company_tex" type="2d" file="../meshes/ArenaX_Black.png" />

        <material name="logo_mat"
            texture="logo_tex"
            rgba="1 1 1 1"/>

        <material name="company_mat"
            texture="company_tex"
            rgba="1 1 1 1"/>

        <texture name="soccer_tex" fileright="../meshes/soccer/right.png"
                                            fileleft="../meshes/soccer/left.png"
                                            fileup="../meshes/soccer/up.png"
                                            filedown="../meshes/soccer/down.png"
                                            filefront="../meshes/soccer/front.png"
                                            fileback="../meshes/soccer/back.png" />

        <material name="soccer_mat"
            texture="soccer_tex"
            rgba="1 1 1 1"/>

    <!-- Basic field material -->
        <material name="mat_grass" rgba="0.13 0.54 0.13 1"/>
        <material name="mat_board" rgba="0.2 0.2 0.2 1"/>


        <material name="mat_patch1" rgba="0.14 0.6 0.14 1"/>
        <material name="mat_patch2" rgba="0.11 0.47 0.11 1"/>

        <texture name="goalkeeper_tex" type="2d" file="../meshes/goalkeeper.png"/>
        <material name="goalkeeper_mat"
            texture="goalkeeper_tex"
            rgba="1 1 1 1"
        />

    </asset>

    <worldbody>
    <!-- Base ground with field overlay -->

        <body name="football_field" pos="0 0 0">
            <geom contype="1" conaffinity="2" friction=".1 0.005 0.0001" name="field_base"
				size="14 10 0.01" type="plane" pos="0 0 0.007" material="mat_grass" condim="3"
				solimp="0 0.95 0.001 0.5 2" solref="0.02 1" margin="0" />
            <geom name="sai_logo1" type="plane" pos="0.00 8.4 0.01" size="1 1 1" material="logo_mat"/>
            <geom name="sai_logo2" type="plane" pos="0.00 -8.4 0.01" quat="0 0 0 1" size="1 1 1" material="logo_mat"/>

            <geom type="mesh" mesh="soccer_field" pos="0 0 0.009" rgba="1 1 1 1"/>

        </body>
        <body name="goal_post_north" pos="10.97 0 0">
            <site name="goal_post_north"/>
      <!-- Front Left Vertical Post -->
            <geom name="left_post_north" type="cylinder" size="0.07 0.9" pos="0 -1.6 0.9" euler="0 0 0"
                contype="1" conaffinity="1" rgba="1 0 0 1"/>

      <!-- Front Right Vertical Post -->
            <geom name="right_post_north" type="cylinder" size="0.07 0.9" pos="0 1.6 0.9" euler="0 0 0"
                contype="1" conaffinity="1" rgba="1 0 0 1"/>

      <!-- Back Left Vertical Post -->
            <geom name="back_left_post_north" type="cylinder" size="0.07 0.9" pos="1.53 -1.6 0.9" euler="0 0 0"
                contype="1" conaffinity="1" rgba="1 0 0 1"/>

      <!-- Back Right Vertical Post -->
            <geom name="back_right_post_north" type="cylinder" size="0.07 0.9" pos="1.53 1.6 0.9" euler="0 0 0"
                contype="1" conaffinity="1" rgba="1 0 0 1"/>

      <!-- Front Top Crossbar -->
            <geom name="crossbar_north" type="cylinder" size="0.07 1.6" pos="0 0 1.8" quat="0.707 0.707 0 0"
                contype="1" conaffinity="1" rgba="1 0 0 1"/>

      <!-- Back Base Bar -->
            <geom name="basebar_north" type="cylinder" size="0.07 1.6" pos="1.53 0 1.8" quat="0.707 0.707 0 0"
                contype="1" conaffinity="1" rgba="1 0 0 1"/>

      <!-- Left Sidebar -->
            <geom name="sidebar1_north" type="cylinder" size="0.07 0.8" pos="0.78 -1.6 1.8" quat="0.707 0 0.707 0"
                contype="1" conaffinity="1" rgba="1 0 0 1"/>

      <!-- Right Sidebar -->
            <geom name="sidebar2_north" type="cylinder" size="0.07 0.8" pos="0.78 1.6 1.8" quat="0.707 0 0.707 0"
                contype="1" conaffinity="1" rgba="1 0 0 1"/>
        </body>
        <body name="goal_post_south" pos="-10.97 0 0" quat="0 0 0 1">
            <site name="goal_post_south"/>
            <geom name="left_post_south" type="cylinder" size="0.07 0.9" pos="0 -1.6 0.9" euler="0 0 0"
                contype="1" conaffinity="1" rgba="0 0 1 1"/>

      <!-- Front Right Vertical Post -->
            <geom name="right_post_south" type="cylinder" size="0.07 0.9" pos="0 1.6 0.9" euler="0 0 0"
                contype="1" conaffinity="1" rgba="0 0 1 1"/>

      <!-- Back Left Vertical Post -->
            <geom name="back_left_post_south" type="cylinder" size="0.07 0.9" pos="1.53 -1.6 0.9" euler="0 0 0"
                contype="1" conaffinity="1" rgba="0 0 1 1"/>

      <!-- Back Right Vertical Post -->
            <geom name="back_right_post_south" type="cylinder" size="0.07 0.9" pos="1.53 1.6 0.9" euler="0 0 0"
                contype="1" conaffinity="1" rgba="0 0 1 1"/>

      <!-- Front Top Crossbar -->
            <geom name="crossbar_south" type="cylinder" size="0.07 1.6" pos="0 0 1.8" quat="0.707 0.707 0 0"
                contype="1" conaffinity="1" rgba="0 0 1 1"/>

      <!-- Back Base Bar -->
            <geom name="basebar_south" type="cylinder" size="0.07 1.6" pos="1.53 0 1.8" quat="0.707 0.707 0 0"
                contype="1" conaffinity="1" rgba="0 0 1 1"/>

      <!-- Left Sidebar -->
            <geom name="sidebar1_south" type="cylinder" size="0.07 0.8" pos="0.78 -1.6 1.8" quat="0.707 0 0.707 0"
                contype="1" conaffinity="1" rgba="0 0 1 1"/>

      <!-- Right Sidebar -->
            <geom name="sidebar2_south" type="cylinder" size="0.07 0.8" pos="0.78 1.6 1.8" quat="0.707 0 0.707 0"
                contype="1" conaffinity="1" rgba="0 0 1 1"/>
        </body>

    <!-- Perimeter boards -->
        <body name="boards" pos="0 0 0.01">
            <geom name="board_north" type="box" size="14.05 0.05 0.25" pos="0 10 0.25" material="mat_board"/>
            <geom name="board_south" type="box" size="14.05 0.05 0.25" pos="0 -10 0.25" material="mat_board"/>
            <geom name="board_east" type="box" size="0.05 10 0.25" pos="14 0 0.25" material="mat_board"/>
            <geom name="board_west" type="box" size="0.05 10 0.25" pos="-14 0 0.25" material="mat_board"/>
        </body>

        <body name="soccer_ball" pos="0 0 0.0">
            <joint name="env:ball" type="free"></joint>
            <geom name="ball" type="sphere" size="0.11" pos="0 0 0.11" material="soccer_mat" density="81"/>
            <site name="ball"/>
        </body>

    </worldbody>
</mujoco>
