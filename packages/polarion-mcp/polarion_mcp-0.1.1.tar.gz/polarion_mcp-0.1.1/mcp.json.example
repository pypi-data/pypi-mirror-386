{
  "mcpServers": {
    "polarion-docker": {
      "command": "docker",
      "args": [
        "run",
        "-i", 
        "--rm",
        "ghcr.io/atoms-tech/polarion-mcp-server:latest"
      ]
    },
    "polarion-uvx": {
      "command": "/Users/your-username/.local/bin/uvx",
      "args": ["mcp-polarion-server@latest"]
    },
    "polarion-local": {
      "command": "/Users/your-username/.local/bin/uv",
      "args": [
        "--directory", 
        "/path/to/your/polarion-mcp",
        "run",
        "polarion_mcp_server.py"
      ]
    }
  }
} 