// Class dengan konstruktor dan multiple methods
kelas Mahasiswa:
    konstruktor(nama, nim):
        diri.nama itu nama
        diri.nim itu nim
        diri.nilai itu []
    selesai
    
    metode tambah_nilai(nilai):
        diri.nilai.append(nilai)
        tampilkan f"✓ Nilai {nilai} ditambahkan untuk {diri.nama}"
    selesai
    
    metode rata_rata():
        total itu 0
        untuk setiap n dari diri.nilai
            total itu total + n
        selesai
        count itu panjang(diri.nilai)
        hasil total / count
    selesai
    
    metode info():
        tampilkan f"Nama: {diri.nama}"
        tampilkan f"NIM: {diri.nim}"
        tampilkan f"Jumlah Nilai: {panjang(diri.nilai)}"
    selesai
selesai

