# ===================================
# 4. Discount Calculator
# ===================================
tampilkan "4. Discount Calculator:"

fungsi hitung_diskon(harga, persen_diskon):
    diskon itu (persen_diskon / 100) * harga
    harga_final itu harga - diskon
    hasil (| harga_final, diskon |)
selesai

harga_asli itu 100000
diskon_persen itu 20

hasil_diskon itu hitung_diskon(harga_asli, diskon_persen)
tampilkan "Harga: Rp " + ke_teks(harga_asli)
tampilkan "Diskon: " + ke_teks(diskon_persen) + "%"
tampilkan "Potongan: Rp " + ke_teks(hasil_diskon[1])
tampilkan "Harga final: Rp " + ke_teks(hasil_diskon[0])

tampilkan ""

# ===================================
# 5. Tax Calculator
# ===================================
tampilkan "5. Tax Calculator:"

fungsi hitung_pajak(harga, persen_pajak):
    pajak itu (persen_pajak / 100) * harga
    total itu harga + pajak
    hasil (| total, pajak |)
selesai

harga_barang itu 50000
pajak_persen itu 10

hasil_pajak itu hitung_pajak(harga_barang, pajak_persen)
tampilkan "Harga: Rp " + ke_teks(harga_barang)
tampilkan "Pajak: " + ke_teks(pajak_persen) + "%"
tampilkan "Nilai pajak: Rp " + ke_teks(hasil_pajak[1])
tampilkan "Total: Rp " + ke_teks(hasil_pajak[0])

tampilkan ""

