# ===================================
# 3. Percentage Calculations
# ===================================
tampilkan "3. Percentage Calculations:"

fungsi hitung_persen(nilai, total):
    hasil (nilai / total) * 100
selesai

fungsi nilai_dari_persen(persen, total):
    hasil (persen / 100) * total
selesai

tampilkan "50 dari 200 = " + ke_teks(hitung_persen(50, 200)) + "%"
