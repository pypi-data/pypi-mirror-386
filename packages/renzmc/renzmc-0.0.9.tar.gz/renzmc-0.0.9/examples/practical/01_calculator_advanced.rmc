# ===================================
# 9. Distance Calculator
# ===================================
tampilkan "9. Distance Calculator:"

fungsi hitung_jarak_2d(x1, y1, x2, y2):
    dx itu x2 - x1
    dy itu y2 - y1
    jarak itu ((dx * dx) + (dy * dy)) ** 0.5
    hasil jarak
selesai

x1 itu 0
y1 itu 0
x2 itu 3
y2 itu 4

jarak itu hitung_jarak_2d(x1, y1, x2, y2)
tampilkan "Jarak dari (" + ke_teks(x1) + "," + ke_teks(y1) + ") ke (" + ke_teks(x2) + "," + ke_teks(y2) + "): " + ke_teks(jarak)

