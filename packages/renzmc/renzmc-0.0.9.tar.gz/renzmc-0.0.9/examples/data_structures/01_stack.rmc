fungsi is_balanced(expression):
    stack itu buat_stack()
    opening itu ["(", "[", "{"]
    closing itu [")", "]", "}"]
    pairs itu {"(": ")", "[": "]", "{": "}"}
    
    untuk setiap char dari expression
        jika char dalam opening
            push(stack, char)
        lainnya jika char dalam closing
            jika panjang(stack) == 0
                hasil salah
            selesai
            
            top itu pop(stack)
            jika pairs[top] != char
                hasil salah
            selesai
        selesai
    selesai
    
    hasil panjang(stack) == 0
selesai

