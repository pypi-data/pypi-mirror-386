# ===================================
# 8. Fungsi dengan Loop
# ===================================
tampilkan "8. Fungsi dengan Loop:"

fungsi jumlah_list(numbers):
    total itu 0
    untuk setiap num dari numbers
        total += num
    selesai
    hasil total
selesai

angka itu [1, 2, 3, 4, 5]
tampilkan "Angka: " + ke_teks(angka)
tampilkan "Jumlah: " + ke_teks(jumlah_list(angka))

tampilkan ""

# ===================================
# 9. Fungsi untuk String Processing
# ===================================
tampilkan "9. Fungsi untuk String Processing:"

fungsi balik_string(teks):
    hasil_list itu []
    panjang_teks itu panjang(teks)
    
    untuk i dari 0 sampai panjang_teks - 1
        index itu panjang_teks - 1 - i
        hasil_list itu hasil_list + [teks[index]]
    selesai
    
    hasil "".join(hasil_list)
selesai

teks_asli itu "Hello"
teks_balik itu balik_string(teks_asli)
tampilkan "Teks asli: " + teks_asli
tampilkan "Teks balik: " + teks_balik

tampilkan ""

