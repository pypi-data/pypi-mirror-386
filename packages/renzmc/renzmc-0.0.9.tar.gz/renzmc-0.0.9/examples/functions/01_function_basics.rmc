# ===================================
# 6. Fungsi Iteratif untuk Faktorial
# ===================================
tampilkan "6. Fungsi Iteratif untuk Faktorial:"

fungsi faktorial(n):
    hasil_fakt itu 1
    untuk i dari 1 sampai n
        hasil_fakt *= i
    selesai
    hasil hasil_fakt
selesai

tampilkan "Faktorial 3: " + ke_teks(faktorial(3))
tampilkan "Faktorial 4: " + ke_teks(faktorial(4))
tampilkan "Faktorial 5: " + ke_teks(faktorial(5))

tampilkan ""

