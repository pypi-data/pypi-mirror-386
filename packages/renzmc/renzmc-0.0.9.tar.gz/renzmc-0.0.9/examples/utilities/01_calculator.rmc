    hasil a % b
selesai

// Fungsi trigonometri
buat fungsi sin dengan x
    impor_python "math"
    hasil panggil_python math.sin(x)
selesai

buat fungsi cos dengan x
    impor_python "math"
    hasil panggil_python math.cos(x)
selesai

buat fungsi tan dengan x
    impor_python "math"
    hasil panggil_python math.tan(x)
selesai

// Fungsi statistik
buat fungsi rata_rata dengan numbers
    jika panjang(numbers) == 0
        hasil 0
    selesai
    
    total itu 0
    untuk setiap num dari numbers
        total itu total + num
    selesai
    
    hasil total / panjang(numbers)
selesai

buat fungsi maksimum dengan numbers
    jika panjang(numbers) == 0
        hasil tidak_ada
    selesai
    
    maks itu numbers[0]
    untuk setiap num dari numbers
        jika num > maks
            maks itu num
        selesai
    selesai
    hasil maks
selesai

buat fungsi minimum dengan numbers
    jika panjang(numbers) == 0
        hasil tidak_ada
    selesai
    
    min itu numbers[0]
    untuk setiap num dari numbers
        jika num < min
            min itu num
        selesai
    selesai
    hasil min
selesai

