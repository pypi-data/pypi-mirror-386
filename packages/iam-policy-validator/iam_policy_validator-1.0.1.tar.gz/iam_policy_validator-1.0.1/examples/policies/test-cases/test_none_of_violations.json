{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ForbiddenActionExample",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "iam:DeleteUser"
      ],
      "Resource": "*"
    },
    {
      "Sid": "InsecureTransportAllowed",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject"
      ],
      "Resource": "arn:aws:s3:::my-bucket/*",
      "Condition": {
        "Bool": {
          "aws:SecureTransport": false
        }
      }
    },
    {
      "Sid": "WildcardIPForDatabase",
      "Effect": "Allow",
      "Action": [
        "rds:DescribeDBInstances",
        "rds:DescribeDBClusters"
      ],
      "Resource": "*",
      "Condition": {
        "IpAddress": {
          "aws:SourceIp": "0.0.0.0/0"
        }
      }
    },
    {
      "Sid": "UserManagementWithMFAButWildcardIP",
      "Effect": "Allow",
      "Action": [
        "iam:CreateUser",
        "iam:CreateAccessKey"
      ],
      "Resource": "*",
      "Condition": {
        "Bool": {
          "aws:MultiFactorAuthPresent": true
        },
        "IpAddress": {
          "aws:SourceIp": "0.0.0.0/0"
        }
      }
    }
  ]
}
