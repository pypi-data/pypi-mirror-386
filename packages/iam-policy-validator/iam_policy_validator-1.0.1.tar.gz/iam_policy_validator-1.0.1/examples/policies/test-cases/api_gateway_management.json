{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "APIGatewayManagement",
      "Effect": "Allow",
      "Action": [
        "apigateway:GET",
        "apigateway:POST",
        "apigateway:PUT",
        "apigateway:DELETE",
        "apigateway:PATCH"
      ],
      "Resource": [
        "arn:aws:apigateway:us-east-1::/restapis",
        "arn:aws:apigateway:us-east-1::/restapis/*"
      ]
    },
    {
      "Sid": "APIGatewayDeployment",
      "Effect": "Allow",
      "Action": [
        "apigateway:POST"
      ],
      "Resource": "arn:aws:apigateway:us-east-1::/restapis/*/deployments",
      "Condition": {
        "StringEquals": {
          "apigateway:StageName": [
            "dev",
            "staging",
            "prod"
          ]
        }
      }
    },
    {
      "Sid": "APIGatewayLogging",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:DescribeLogGroups"
      ],
      "Resource": "arn:aws:logs:us-east-1:123456789012:log-group:API-Gateway-*"
    }
  ]
}
