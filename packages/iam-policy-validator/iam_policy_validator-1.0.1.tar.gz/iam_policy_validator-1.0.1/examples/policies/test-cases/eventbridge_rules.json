{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EventBridgeRuleManagement",
      "Effect": "Allow",
      "Action": [
        "events:PutRule",
        "events:DeleteRule",
        "events:DescribeRule",
        "events:ListRules",
        "events:EnableRule",
        "events:DisableRule"
      ],
      "Resource": "arn:aws:events:us-east-1:123456789012:rule/automation-*"
    },
    {
      "Sid": "EventBridgeTargets",
      "Effect": "Allow",
      "Action": [
        "events:PutTargets",
        "events:RemoveTargets",
        "events:ListTargetsByRule"
      ],
      "Resource": "arn:aws:events:us-east-1:123456789012:rule/automation-*"
    },
    {
      "Sid": "EventBridgeInvoke",
      "Effect": "Allow",
      "Action": [
        "lambda:InvokeFunction",
        "sns:Publish",
        "sqs:SendMessage",
        "states:StartExecution"
      ],
      "Resource": [
        "arn:aws:lambda:us-east-1:123456789012:function:event-handler-*",
        "arn:aws:sns:us-east-1:123456789012:event-notifications",
        "arn:aws:sqs:us-east-1:123456789012:event-queue",
        "arn:aws:states:us-east-1:123456789012:stateMachine:event-workflow"
      ]
    }
  ]
}
