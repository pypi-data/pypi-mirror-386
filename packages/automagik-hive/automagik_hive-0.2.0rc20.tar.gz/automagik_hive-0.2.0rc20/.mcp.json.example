{
  "mcpServers": {
    "ask-repo-agent": {
      "type": "sse",
      "url": "https://mcp.deepwiki.com/sse"
    },
    "search-repo-docs": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql+psycopg://DB_USER:DB_PASSWORD@localhost:5532/hive"
      ]
    },
    "automagik-hive": {
      "command": "uvx",
      "args": [
        "automagik-tools@0.8.17",
        "tool",
        "automagik-hive"
      ],
      "env": {
        "HIVE_API_BASE_URL": "http://localhost:8886",
        "HIVE_API_KEY": "YOUR_HIVE_API_KEY",
        "HIVE_TIMEOUT": "300"
      }
    }
  }
}
