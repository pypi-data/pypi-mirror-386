{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "VFG",
    "$defs": {
        "Filepath": {
            "type": "string",
            "pattern": "^.*\\.(npy)$"
        },
        "Variable": {
            "type": "object",
            "properties": {
                "domain": {
                    "enum": [
                        "real",
                        "nonnegative_real",
                        "positive_real",
                        "positive_definite",
                        "positive_semidefinite",
                        "simplex",
                        "categorical"
                    ]
                },
                "constraints": {
                    "form": {
                        "enum": [
                            "delta"
                        ]
                    }
                },
                "shape": {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                },
                "elements": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "messages": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/$defs/Filepath"
                    }
                },
                "observation": {
                    "$ref": "#/$defs/Filepath"
                },
                "control_state": {
                    "type": "boolean"
                }
            },
            "required": ["domain", "shape"],
            "additionalProperties": false
        },
        "VariableReference": {
            "oneOf": [
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": [
                        { "type": "string" },
                        { "type": "integer" }
                    ],
                    "additionalItems": false
                }
            ]
        },
        "NodeConstraint": {
            "type": "object",
            "properties": {
                "variables": {
                    "type": "array",
                    "items": { "$ref": "#/$defs/VariableReference" }
                },
                "form": {
                    "enum": [
                        "delta"
                    ]
                },
                "p_substitutions": {
                    "type": "array",
                    "items": { "$ref": "#/$defs/VariableReference" }
                }
            },
            "required": ["variables"]
        },
        "Function": {
            "type": "object",
            "properties": {
                "function": {
                    "enum": [
                        "categorical",
                        "conditional_categorical",
                        "dirichlet",
                        "gaussian",
                        "linear_gaussian",
                        "mixture",
                        "gmm",
                        "wishart",
                        "matrix_normal_wishart",
                        "normal_inverse_wishart",
                        "softmax",
                        "mnlr",
                        "potential",
                        "+",
                        "-",
                        "*",
                        "custom"
                    ]
                },
                "output": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/VariableReference"
                    },
                    "minItems": 1
                },
                "parameters": {
                    "type": "object",
                    "additionalProperties": {
                        "anyOf": [
                            {
                                "$ref": "#/$defs/VariableReference"
                            },
                            {
                                "type": "array",
                                "items": {
                                    "$ref": "#/$defs/VariableReference"
                                }
                            }
                        ]
                    }
                },
                "constraints": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/$defs/NodeConstraint"
                    }
                },
                "control_target": { "type": "boolean"}
            },
            "required": ["function", "output"],
            "additionalProperties": false
        },
        "Factor": {
            "oneOf": [
                {
                "$ref": "#/$defs/Function"},
                {
                    "type": "array",
                    "items": { "type": "string" }
                }
            ]
        },
        "Plate": {
            "type": "object",
            "properties": {
                "factors": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                },
                "variables": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "minItems": 1
                },
                "size": {
                    "type": "integer"
                }
            },
            "required": ["factors", "variables", "size"],
            "additionalProperties": false
        }
    },
    "properties": {
        "version": {
            "type": "string",
            "const":"2.1.0"
        },
        "variables": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/Variable"
            }
        },
        "factors": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/Factor"
            }
        },
        "plates": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/$defs/Plate"
            }
        }
    },
    "required": [
        "version",
        "factors",
        "variables"
    ],
    "additionalProperties": false
}