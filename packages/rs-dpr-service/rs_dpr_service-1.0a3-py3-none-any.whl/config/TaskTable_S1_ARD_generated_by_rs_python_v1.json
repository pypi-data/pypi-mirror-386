          "order": 1,
          "input_products": {
            "cal_slcs": "calibration.cal_slcs",
            "reference_dem": "reference_dem.reference_dem"
          },
          "output_products": {
            "simulation_ref": "pipeline_internal"
          }
        },
        {
          "unit_name": "coregistration",
          "order": 1,
          "input_products": {
            "cal_slcs": "calibration.cal_slcs",
            "reference_dem": "reference_dem.reference_dem",
            "simulation_ref": "reference_geometry.simulation_ref"
          },
          "output_products": {
