{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Nation",
  "description": "Check nation NFT stats",
  "x-icon": "https://ai.service.crestal.dev/skills/nation/nation.png",
  "x-tags": [
    "Analytics",
    "Crypto",
    "NFT"
  ],
  "properties": {
    "enabled": {
      "type": "boolean",
      "title": "Enabled",
      "description": "Whether this skill is enabled",
      "default": false
    },
    "states": {
      "type": "object",
      "properties": {
        "nft_check": {
          "type": "string",
          "title": "Nation NFT Usage Check",
          "enum": [
            "disabled",
            "public",
            "private"
          ],
          "x-enum-title": [
            "Disabled",
            "Agent Owner + All Users",
            "Agent Owner Only"
          ],
          "description": "Check User Nation NFT Usage",
          "default": "disabled"
        }
      },
      "description": "States for each Nation skill"
    },
    "api_key_provider": {
      "type": "string",
      "title": "API Key Provider",
      "description": "Who provides the API key",
      "enum": [
        "platform"
      ],
      "x-enum-title": [
        "Nation Hosted"
      ],
      "default": "platform"
    }
  },
  "required": [
    "states",
    "enabled"
  ],
  "additionalProperties": true
}
