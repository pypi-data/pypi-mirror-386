# Include package data
include README.md
include LICENSE
include requirements.txt
include pyproject.toml
include setup.py
include dcisionai_kb.json

# Include all Python files
recursive-include src *.py
recursive-include src *.json
recursive-include src *.yaml
recursive-include src *.yml
recursive-include src *.txt
recursive-include src *.md

# Include configuration files
recursive-include src/config *.yaml
recursive-include src/config *.yml
recursive-include src/config *.json

# Include workflow definitions
recursive-include src/workflows *.py
recursive-include src/workflows *.json
recursive-include src/workflows *.yaml

# Include tests
recursive-include tests *.py
recursive-include tests *.json

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.egg-info
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov
global-exclude .mypy_cache
global-exclude .tox
global-exclude .venv
global-exclude venv
global-exclude env
global-exclude .env
