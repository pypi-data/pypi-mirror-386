<?xml version="1.0"?>
<robot name="myDoubleSphereRobot">

	<link name="myParentLink">
		<collision>
			<origin xyz="0 0 0" rpy="0 0 0" />
			<geometry>
				<sphere radius="0.1"/>
			</geometry>
		</collision>
	</link>

	<link name="myChildLink">
		<collision>
			<origin xyz="0 0.25 0" rpy="0 0 0" />
			<geometry>
				<sphere radius="0.1"/>
			</geometry>
		</collision>
	</link>

	<joint name="joint" type="revolute">
		<parent link="myParentLink" />
		<child link="myChildLink" />
		<limit lower="-2" upper="2" />
	</joint>

</robot> 
