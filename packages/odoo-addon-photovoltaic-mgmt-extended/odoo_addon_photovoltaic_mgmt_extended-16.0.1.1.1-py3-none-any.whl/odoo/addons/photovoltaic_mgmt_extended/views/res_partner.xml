<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="participant" position="after">
                    <field name="interest_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                </field>

                <page name="internal_notes" position="inside">
                    <group attrs="{'invisible': [('participant', '=', False)]}">
                        <field name="promotional_code" readonly="1"/>
                        <field name="friend_ids" mode="tree" groups="photovoltaic_mgmt.photovoltaic_user">
                            <tree>
                                <field name="friend_id" />
                                <field name="used" />
                            </tree>
                        </field>
                        <field name="inviter_id" readonly="1" groups="photovoltaic_mgmt.photovoltaic_user"/>
                        <field name="active_contracts_count" groups="photovoltaic_mgmt.photovoltaic_user"/>
                    </group>
                </page>
            </field>
    </record>

    <record id="mail.action_partner_mass_mail" model="ir.actions.act_window">
        <field name="binding_view_types">list,form</field>
    </record>

</odoo>
