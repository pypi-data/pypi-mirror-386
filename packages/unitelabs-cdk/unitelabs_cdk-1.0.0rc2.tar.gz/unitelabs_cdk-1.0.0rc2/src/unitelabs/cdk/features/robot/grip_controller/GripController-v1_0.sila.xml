<?xml version="1.0" encoding="utf-8" ?>
<Feature SiLA2Version="1.0" FeatureVersion="1.0" MaturityLevel="Draft" Originator="io.unitelabs" Category="robot"
         xmlns="http://www.sila-standard.org"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.sila-standard.org https://gitlab.com/SiLA2/sila_base/raw/master/schema/FeatureDefinition.xsd">
  <Identifier>GripController</Identifier>
  <DisplayName>Grip Controller</DisplayName>
  <Description>Controls a robotic gripper for e.g. labware transfer operations.</Description>
  <Command>
    <Identifier>Grip</Identifier>
    <DisplayName>Grip</DisplayName>
    <Description>Closes the gripper.</Description>
    <Observable>No</Observable>
  </Command>
  <Command>
    <Identifier>Release</Identifier>
    <DisplayName>Release</DisplayName>
    <Description>Releases the gripper.</Description>
    <Observable>No</Observable>
  </Command>
</Feature>
