{{ var_name }} = Runtime(
    {% if runtime_settings %}
    runtime_settings = RuntimeSettings(
        {% if runtime_settings.retention_amount %}
        retention_amount = {{ runtime_settings.retention_amount }}
        {% elif runtime_settings.retention_days %}
        retention_days = {{ runtime_settings.retention_days }}
        {% endif %}
    )
    {% endif %}
    {% if format %}
    format = Format(
        {% if format.date_format %}
        date_format = "{{ format.date_format }}",
        {% endif %}
        {% if format.timestamp_format %}
        timestamp_format = "{{ format.timestamp_format }}",
        {% endif %}
        {% if format.decimal_separator %}
        decimal_separator = "{{ format.decimal_separator }}",
        {% endif %}
        {% if format.time_format %}
        time_format = "{{ format.time_format }}",
        {% endif %}
    )
    {% endif %}
)

flow.use_runtime({{ var_name }})
