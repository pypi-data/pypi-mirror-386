{{ var_name }} = {{ composer }}.add_stage({{ stage_label }}, {{ stage_name }})
{% if use_conn -%}
{{ var_name }}.use_connection({{ use_conn }})
{%- endif %}
{%- for prop, value in properties.items() %}
{{ var_name }}.configuration.{{ prop }} = {{ value }}
{%- endfor -%}
{% for comment_var in comments -%}
{{"\n"}}{{ var_name }}.with_comment({{ comment_var }})
{%- endfor %}
