{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/OWASP/nest-schema/main/chapter.json",
  "additionalProperties": false,
  "description": "OWASP chapter schema",
  "properties": {
    "blog": {
      "description": "Chapter's blog.",
      "format": "uri",
      "type": "string"
    },
    "community": {
      "description": "A list of community platforms associated with the chapter.",
      "items": {
        "$ref": "common.json#/definitions/community"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "currency": {
      "description": "ISO 4217 currency code",
      "pattern": "^[A-Z]{3}$",
      "type": "string"
    },
    "events": {
      "description": "Events related to the project.",
      "items": {
        "$ref": "common.json#/definitions/event"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "leaders": {
      "description": "Leaders of the chapter.",
      "items": {
        "$ref": "common.json#/definitions/person"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "location": {
      "$ref": "common.json#/definitions/location",
      "description": "Location of the chapter."
    },
    "logo": {
      "additionalProperties": false,
      "description": "Logo for the chapter.",
      "items": {
        "$ref": "common.json#/definitions/logo"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "mailing_list": {
      "description": "The optional mailing list associated with the chapter.",
      "items": {
        "$ref": "common.json#/definitions/mailing_list"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "meetup_group": {
      "description": "Meetup group.",
      "minLength": 1,
      "type": "string"
    },
    "name": {
      "description": "The unique name of chapter.",
      "minLength": 10,
      "type": "string"
    },
    "repositories": {
      "description": "Repositories associated with the chapter.",
      "items": {
        "$ref": "common.json#/definitions/repository"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "social_media": {
      "description": "Social media information for the chapter.",
      "items": {
        "$ref": "common.json#/definitions/social_media"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "sponsors": {
      "description": "Sponsors of the chapter.",
      "items": {
        "$ref": "common.json#/definitions/sponsor"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "tags": {
      "description": "Tags for the chapter",
      "items": {
        "type": "string"
      },
      "minItems": 3,
      "type": "array",
      "uniqueItems": true
    },
    "website": {
      "description": "The official website of the chapter.",
      "format": "uri",
      "minLength": 4,
      "type": "string"
    }
  },
  "required": [
    "leaders",
    "location",
    "name",
    "tags"
  ],
  "title": "OWASP Chapter",
  "type": "object"
}
