# MANIFEST.in - Specifies additional files to include in the distribution

# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include babel.cfg

# Include logo
include logo/*.png

# Include configuration files
include pyproject.toml
include setup.py
include requirements.txt

# Include data files
recursive-include data *.db *.sql
recursive-include pyarchinit_mini/data *.db *.sql

# Include all pyarchinit_mini submodules and their data
recursive-include pyarchinit_mini *.py *.yaml *.yml *.json *.graphml
recursive-include pyarchinit_mini/web_interface/templates *.html
recursive-include pyarchinit_mini/web_interface/static *.css *.js *.png *.jpg *.ico *.gif
recursive-include web_interface/static/images *.png
recursive-include pyarchinit_mini/desktop_gui *.py *.png *.ico *.gif
recursive-include desktop_gui/assets *.png
recursive-include pyarchinit_mini/cli_interface *.py *.json *.yaml
recursive-include pyarchinit_mini/translations *.po *.mo *.pot
recursive-include pyarchinit_mini/graphml_converter/templates *.graphml

# Include tests
recursive-include tests *.py

# Exclude unnecessary files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude docs *
recursive-exclude examples *
recursive-exclude scripts *
recursive-exclude .venv *
recursive-exclude .git *
prune test_*
prune databases
prune media
prune uploads