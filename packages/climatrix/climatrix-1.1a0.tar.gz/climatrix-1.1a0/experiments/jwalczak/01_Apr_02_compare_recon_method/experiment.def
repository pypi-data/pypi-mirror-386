Bootstrap: docker
From: ubuntu:24.04

%environment
    export DEBIAN_FRONTEND=noninteractive
    export APP_DIR=/app
    export CLIMATRIX_EXP_DIR=/app
    export PATH=/app/conf/exp1/bin:$PATH
    export VIRTUAL_ENV=/app/conf/exp1

%files
    conf /app/conf
    scripts /app/scripts
    entrypoint.sh /app/entrypoint.sh
    ../../../../climatrix /app/climatrix

%post
    echo "Contents of /app:"
    ls -la /app/

    apt-get update && apt-get install -y --no-install-recommends \
        python3 \
        python3-pip \
        python3-dev \
        python3-venv \
        build-essential \
        wget curl git unzip bash \
        && rm -rf /var/lib/apt/lists/*

    # Set environment variable for setup script
    export CLIMATRIX_EXP_DIR=/app
    
    cd /app/conf
    bash setup.sh

    cd /app/climatrix
    . /app/conf/exp1/bin/activate
    pip install .[all] --no-cache-dir

    chmod +x /app/entrypoint.sh
    find /app -name "*.sh" -type f -exec chmod +x {} +

    # Ensure results directory exists
    mkdir -p /app/results

%runscript
    exec /app/entrypoint.sh "$@"
