{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: BlackSheep",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "db_username": "postgres",
                "db_password": "secret",
                "host_server": "localhost",
                "database_name": "blacksheep",
                "ssl_mode": "prefer",
                "db_server_port": "5432"
            },
            "args": [
                "src.app.main:app",
                "--port",
                "8968"
            ],
            "justMyCode": false
        },
        {
            "name": "Python: tests/tests.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/tests.py",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            "justMyCode": true
        }
    ]
}
