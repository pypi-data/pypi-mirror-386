# Only include essential files for the multiagent CLI tool
include README.md
include LICENSE
include multiagent_core/VERSION

# Include only the templates directory (needed for multiagent init)
recursive-include multiagent_core/templates *

# Exclude all development/build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.egg-info
global-exclude .DS_Store
global-exclude *.swp
global-exclude *~

# Exclude logs and test data
recursive-exclude multiagent_core/templates/.multiagent/pr-review/logs *
recursive-exclude * *.log

# Exclude contributor-only commands (don't ship to user projects)
exclude multiagent_core/templates/.claude/commands/docs/sync.md
exclude multiagent_core/templates/.claude/agents/docs-sync.md
exclude multiagent_core/templates/.claude/commands/github/issue-review.md
exclude multiagent_core/templates/.claude/agents/issue-reviewer.md

# Exclude git files (but keep template .gitignore for multiagent init)
# FIXED: Don't exclude .gitignore template
global-exclude .git
global-exclude .gitattributes
global-exclude .gitmodules
# NOTE: .gitignore template in multiagent_core/templates/ is explicitly included below
include multiagent_core/templates/.gitignore

# Exclude development files from root (not needed for pipx install)
exclude .claude
exclude .github
exclude .multiagent
exclude .vscode
exclude build-system
exclude config
exclude docs
exclude specs
exclude tests
exclude scripts
