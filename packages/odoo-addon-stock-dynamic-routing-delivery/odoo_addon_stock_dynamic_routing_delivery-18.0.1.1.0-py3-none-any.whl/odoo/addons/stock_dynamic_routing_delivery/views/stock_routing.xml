<odoo>
    <record id="view_stock_routing_form" model="ir.ui.view">
        <field name="model">stock.routing</field>
        <field name="inherit_id" ref="stock_dynamic_routing.view_stock_routing_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='rule_ids']/list" position="inside">
                <field name="propagate_carrier" optional="hide" />
            </xpath>
            <xpath
                expr="//field[@name='rule_ids']/form//field[@name='rule_domain']/parent::group"
                position="inside"
            >
                <field name="propagate_carrier" />
            </xpath>
        </field>
    </record>
</odoo>
