{# Jinja Template for Bibtex Entry export -#}
{% set max_key = entry.keys()|map('length')|max %}
@{{ entry_type }}{{ '{' }}{{ key }},
{% for key,val in entry|items -%}
  {#- key = val, indented and aligned on the = -#}
  {{key|indent(first=True)}}{{" "*(max_key-(key|length))}} = {{ val.value|string|trim|wrap }},
{% endfor -%}
}

