{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Schema for chip config",
  "description": "Chip config json",
  "type": "object",
  "properties": {
    "RD53B": {
      "description": "RD53B chip configuration",
      "type": "object",
      "properties": {
        "PixelConfig": {
          "type": "array",
          "minItems": 400,
          "maxItems": 400,
          "items": {
            "type": "object",
            "properties": {
              "TDAC": {
                "type": "array",
                "minItems": 384,
                "maxItems": 384
              }
            },
            "required": ["TDAC"]
          }
        }
      }
    },

    "ITKPIXV2": {
      "description": "ITKPIXV2 chip configuration",
      "type": "object",
      "properties": {
        "PixelConfig": {
          "type": "array",
          "minItems": 400,
          "maxItems": 400,
          "items": {
            "type": "object",
            "properties": {
              "TDAC": {
                "type": "array",
                "minItems": 384,
                "maxItems": 384
              }
            },
            "required": ["TDAC"]
          }
        }
      }
    }
  },
  "oneof":[
      {"required": ["RD53B"]},
      {"required": ["ITKPIXV2"]}
  ]
}
