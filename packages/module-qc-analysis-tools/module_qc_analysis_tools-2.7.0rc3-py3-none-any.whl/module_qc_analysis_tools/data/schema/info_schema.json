{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Schema for input json file with YARR scans",
  "description": "Raw data json",
  "type": "object",
  "properties": {
    "datadir": {
      "description": "Directory containing YARR scan output",
      "type": "string"
    },
    "YARR_VERSION": {
      "description": "Software version used to obtain the YARR scan.",
      "type": "string"
    },
    "module": {
      "description": "Information on module",
      "type": "object",
      "properties": {
        "serialNumber": {
          "description": "Module SN",
          "type": "string"
        },
        "chipType": {
          "description": "Chip type",
          "type": "string"
        }
      },
      "required": ["serialNumber", "chipType"]
    },
    "chip": {
      "description": "List of information on individual chips",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "serialNumber": {
            "description": "Chip serial number",
            "type": "string"
          },
          "filepaths": {
            "description": "Dictionary containing file paths and analysis key",
            "type": "object"
          }
        },
        "required": ["serialNumber", "filepaths"]
      }
    }
  },
  "required": ["datadir", "YARR_VERSION", "module", "chip"]
}
