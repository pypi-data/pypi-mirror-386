<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
<!--  XSchema $Id: IntegerPolynomialSystem.xsd,v 1.1 2006/03/04 21:20:41 graebe Exp $  -->

  <xs:include schemaLocation="Common.xsd"/>

  <!-- type definition -->

  <xs:simpleType name="Polynomial">
    <!-- A polynomial in distributive form without whitespaces. -->
    <xs:restriction base="xs:token">
      <xs:pattern value="\S+"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="VarList">
    <!-- A comma separated list of variable names.-->
    <xs:restriction base="xs:token">
      <xs:pattern value="\w+(,\w+)*"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- subelement definition -->

  <xs:element name="basis">
    <xs:complexType>
      <xs:sequence>
	<xs:element maxOccurs="unbounded" name="poly" type="Polynomial"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <!-- Root element definition -->

  <xs:element name="INTPS">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="vars" type="VarList"/>
        <xs:element ref="basis"/>
        <xs:group ref="RootTableEntries"/>
      </xs:sequence>
      <xs:attributeGroup ref="recordAttributes"/>
    </xs:complexType>
  </xs:element>
</xs:schema>
