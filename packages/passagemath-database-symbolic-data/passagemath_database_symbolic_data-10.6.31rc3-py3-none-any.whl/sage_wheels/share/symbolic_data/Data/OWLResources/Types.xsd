<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"> 
<!--  XSchema $Id: Types.xsd,v 1.2 2006/03/05 21:36:12 graebe Exp $  -->

<!-- no forward references for XML::Validator::Schema !! -->

  <xs:simpleType name="Person">
    <!-- The nick name of a Contributor -->
    <xs:restriction base="xs:token">
      <xs:pattern value="[a-z]+"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="Identifier">
    <!-- Allowed identifiers for OWL individuals -->
    <xs:restriction base="xs:token">
      <xs:pattern value="[a-zA-Z][a-zA-Z0-9_.-]*"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="UnsignedIntList">
    <!-- A whitespace separated list of unsigned integers. -->
    <xs:restriction base="xs:token">
      <xs:pattern value="\d+(\s+\d+)*"/>
    </xs:restriction>
  </xs:simpleType>

   <xs:simpleType name="VarList">
    <!-- A comma separated list of variable names.-->
    <xs:restriction base="xs:token">
      <xs:pattern value="\w+(,\w+)*"/>
    </xs:restriction>
  </xs:simpleType>

</xs:schema>
