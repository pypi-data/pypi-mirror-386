# Include project metadata files
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include prompt template files
recursive-include codeviewx/prompts *.md

# Include template files
recursive-include codeviewx/tpl *.html

# Include static files
recursive-include codeviewx/static **/*

# Include documentation
recursive-include docs *.md

# Exclude unnecessary files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * *.swp
recursive-exclude * .gitignore

# Exclude old directory structure
exclude tools/*
exclude prompt/*

