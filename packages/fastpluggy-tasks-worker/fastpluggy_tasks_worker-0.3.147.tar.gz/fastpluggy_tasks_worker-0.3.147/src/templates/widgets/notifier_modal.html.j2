<!-- Notifier Modal -->
<div class="modal modal-blur fade" id="modal-add-notifier" tabindex="-1" role="dialog" aria-labelledby="modalAddNotifierLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <form onsubmit="addNotifierConfig(event)">
        <div class="modal-header custom-modal-header">
          <h5 class="modal-title" id="modalAddNotifierLabel">Add Notifier</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <div class="mb-3">
            <label for="notifier-select" class="form-label">Notifier</label>
            <select id="notifier-select" class="form-select" required></select>
          </div>

          <div class="mb-3">
            <label class="form-label d-flex justify-content-between align-items-center">
              <span>Events</span>
              <span class="small">
                <a href="#" onclick="selectAllEvents(); return false;">Select all</a> /
                <a href="#" onclick="deselectAllEvents(); return false;">Deselect all</a>
              </span>
            </label>
            <div id="event-checkboxes"></div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" id="notifier-submit-button">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>
