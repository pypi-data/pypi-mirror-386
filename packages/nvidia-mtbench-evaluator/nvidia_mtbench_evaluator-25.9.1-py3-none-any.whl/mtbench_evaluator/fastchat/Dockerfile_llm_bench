ARG LLM_BENCH_IMAGE
FROM ${LLM_BENCH_IMAGE}

COPY . /workspace/fastchat
RUN pip install /workspace/fastchat

# update core package versions to match LLM-Bench requirements (transformers, datasets, sentencepiece)
RUN pip install -U -r /workspace/llm-bench/requirements_benchmarks.txt

WORKDIR /workspace/fastchat
