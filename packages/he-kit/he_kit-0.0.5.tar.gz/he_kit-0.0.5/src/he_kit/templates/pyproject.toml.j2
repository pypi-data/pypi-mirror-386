[project]
name = "{{canonical_name}}"
version = "0.1.0"
description = "{{description}}"
requires-python = ">=3.12"
dependencies = [
    "he-kit=={{kit_version}}",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src/{{module_name}}"]

[tool.helicon]
module-name = "{{module_name}}"
settings-class = "{{module_name}}.conf.Settings"

[tool.ruff]
line-length = 88
target-version = "py312"

[dependency-groups]
dev = [
    "pytest>=8.4.2",
    "pytest-asyncio>=1.2.0",
    "ruff>=0.6.0",
]
