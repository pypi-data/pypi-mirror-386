{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "opensim-dependencies-base",
      "hidden": true,
      "description": "Base preset for OpenSim dependencies build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "SUPERBUILD_ezc3d": "ON",
        "OPENSIM_WITH_CASADI": "OFF",
        "OPENSIM_WITH_TROPTER": "OFF",
        "OPENSIM_WITH_MOCO": "OFF"
      }
    },
    {
      "name": "opensim-dependencies-linux",
      "description": "Linux dependencies build configuration",
      "inherits": "opensim-dependencies-base",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-pthread -fPIC",
        "CMAKE_C_FLAGS": "-pthread -fPIC",
        "CMAKE_EXE_LINKER_FLAGS": "-pthread",
        "CMAKE_SHARED_LINKER_FLAGS": "-pthread"
      }
    },
    {
      "name": "opensim-dependencies-macos",
      "description": "macOS dependencies build configuration",
      "inherits": "opensim-dependencies-base",
      "cacheVariables": {
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0"
      }
    },
    {
      "name": "opensim-dependencies-macos-universal2",
      "description": "macOS universal2 dependencies build configuration",
      "inherits": "opensim-dependencies-macos",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64;arm64"
      }
    },
    {
      "name": "opensim-dependencies-macos-arm64",
      "description": "macOS arm64 dependencies build configuration",
      "inherits": "opensim-dependencies-macos",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "opensim-dependencies-macos-x86_64",
      "description": "macOS x86_64 dependencies build configuration",
      "inherits": "opensim-dependencies-macos",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64"
      }
    },
    {
      "name": "opensim-dependencies-windows",
      "description": "Windows dependencies build configuration",
      "inherits": "opensim-dependencies-base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/MD /W0 /EHsc /utf-8",
        "CMAKE_C_FLAGS": "/MD /W0 /utf-8"
      }
    },
    {
      "name": "opensim-core-base",
      "hidden": true,
      "description": "Base preset for OpenSim core build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_JAVA_WRAPPING": "OFF",
        "BUILD_PYTHON_WRAPPING": "OFF",
        "BUILD_TESTING": "OFF",
        "BUILD_API_EXAMPLES": "OFF",
        "OPENSIM_C3D_PARSER": "ezc3d",
        "OPENSIM_WITH_CASADI": "OFF",
        "OPENSIM_WITH_TROPTER": "OFF",
        "OPENSIM_WITH_MOCO": "OFF",
        "OPENSIM_INSTALL_UNIX_FHS": "OFF"
      }
    },
    {
      "name": "opensim-core-linux",
      "description": "Linux OpenSim core build configuration",
      "inherits": "opensim-core-base",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-pthread -Wno-array-bounds -fPIC",
        "CMAKE_C_FLAGS": "-pthread -fPIC",
        "CMAKE_EXE_LINKER_FLAGS": "-pthread",
        "CMAKE_SHARED_LINKER_FLAGS": "-pthread"
      }
    },
    {
      "name": "opensim-core-macos",
      "description": "macOS OpenSim core build configuration",
      "inherits": "opensim-core-base",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wno-array-bounds",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0"
      }
    },
    {
      "name": "opensim-core-macos-universal2",
      "description": "macOS universal2 OpenSim core build configuration",
      "inherits": "opensim-core-macos",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64;arm64"
      }
    },
    {
      "name": "opensim-core-macos-arm64",
      "description": "macOS arm64 OpenSim core build configuration",
      "inherits": "opensim-core-macos",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      }
    },
    {
      "name": "opensim-core-macos-x86_64",
      "description": "macOS x86_64 OpenSim core build configuration",
      "inherits": "opensim-core-macos",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64"
      }
    },
    {
      "name": "opensim-core-windows",
      "description": "Windows OpenSim core build configuration",
      "inherits": "opensim-core-base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/MD /EHsc /utf-8 /bigobj",
        "CMAKE_C_FLAGS": "/MD /utf-8"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "opensim-dependencies-linux",
      "configurePreset": "opensim-dependencies-linux",
      "configuration": "Release",
      "jobs": 4
    },
    {
      "name": "opensim-dependencies-macos-universal2",
      "configurePreset": "opensim-dependencies-macos-universal2",
      "configuration": "Release",
      "jobs": 4
    },
    {
      "name": "opensim-core-linux",
      "configurePreset": "opensim-core-linux",
      "configuration": "Release",
      "jobs": 4
    },
    {
      "name": "opensim-core-macos-universal2",
      "configurePreset": "opensim-core-macos-universal2",
      "configuration": "Release",
      "jobs": 4
    },
    {
      "name": "opensim-dependencies-windows",
      "configurePreset": "opensim-dependencies-windows",
      "configuration": "Release",
      "jobs": 4
    },
    {
      "name": "opensim-core-windows",
      "configurePreset": "opensim-core-windows",
      "configuration": "Release",
      "jobs": 4
    }
  ]
}
