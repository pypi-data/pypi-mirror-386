<?xml version="1.0"?>
<robot name="simple_test_robot">

  <material name="red">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>

  <material name="green">
    <color rgba="0.0 1.0 0.0 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>

  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <link name="base_link">
    <visual>
      <origin xyz="0.01 0.02 0.05" rpy="0.1 0.2 0.3"/>
      <geometry>
        <box size="0.2 0.2 0.1"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <link name="torso_link">
    <visual>
      <origin xyz="0 0 0.15" rpy="0 0.1 -0.1"/>
      <geometry>
        <cylinder radius="0.08" length="0.3"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="upper_arm_link">
    <visual>
      <origin xyz="0.01 0.01 0" rpy="0.2 0 0"/>
      <geometry>
        <sphere radius="0.07"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <link name="forearm_link">
    <visual>
      <origin xyz="-0.05 -0.02 -0.01" rpy="1.5707 0 0"/>
      <geometry>
        <mesh filename="./meshes/forearm.stl" scale="1.0 1.0 1.0"/>
      </geometry>
      <material name="green"/>
    </visual>
  </link>

  <link name="hand_link">
    <visual>
      <origin xyz="0 0.05 0" rpy="0 0.1 0.1"/>
      <geometry>
        <box size="0.03 0.1 0.03"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>

  <joint name="base_to_torso" type="revolute">
    <parent link="base_link"/>
    <child link="torso_link"/>
    <origin xyz="0 0 0.06" rpy="0.1 0 0.1"/>
    <axis xyz="0.1 0.2 1"/>
    <limit lower="-1.57" upper="1.57" effort="100" velocity="1.0"/>
  </joint>

  <joint name="torso_to_upper_arm" type="prismatic">
    <parent link="torso_link"/>
    <child link="upper_arm_link"/>
    <origin xyz="0.05 0 0.2" rpy="0.1 0.1 0"/>
    <axis xyz="0 1 0.1"/>
    <limit lower="0.0" upper="0.15" effort="100" velocity="1.0"/>
  </joint>
  
  <joint name="upper_arm_to_forearm" type="continuous">
    <parent link="upper_arm_link"/>
    <child link="forearm_link"/>
    <origin xyz="0 0.1 0" rpy="0 -0.2 0.2"/>
    <axis xyz="1 0.1 0.1"/>
  </joint>

  <joint name="forearm_to_hand" type="fixed">
    <parent link="forearm_link"/>
    <child link="hand_link"/>
    <origin xyz="0.12 0 0" rpy="0 0.3 -0.3"/>
  </joint>

</robot>