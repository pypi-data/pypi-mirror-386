# PyHybridDB Environment Configuration
# Rename this file to .env and update with your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Security - JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-use-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Default Admin Credentials (CHANGE THESE!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@pyhybriddb.com

# Database Configuration
DEFAULT_DB_PATH=./data
MAX_DATABASES=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=pyhybriddb.log

# CORS Configuration
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting (future use)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
REMEMBER_ME_DAYS=7
