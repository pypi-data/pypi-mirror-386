// https://github.com/libsdl-org/SDL
init("library", "SDL");

function detect() {
    if (PE.isLibraryPresentExp(/^sdl2/i)) {
        sVersion = "2";
    } else if (PE.isLibraryPresentExp(/^sdl3/i)) {
        sVersion = "3";
    } else if (PE.isLibraryPresentExp(/^sdl/i)) {
        bDetected = true;
    }

    bDetected = bDetected || Boolean(sVersion);

    return result();
}