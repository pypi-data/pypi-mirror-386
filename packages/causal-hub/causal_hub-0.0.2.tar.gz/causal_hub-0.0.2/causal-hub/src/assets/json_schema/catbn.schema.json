{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "catbn.schema.json",
    "type": "object",
    "properties": {
        "name": {
            "type": [
                "string",
                "null"
            ]
        },
        "description": {
            "type": [
                "string",
                "null"
            ]
        },
        "graph": {
            "$ref": "digraph.schema.json"
        },
        "cpds": {
            "type": "array",
            "items": {
                "$ref": "catcpd.schema.json"
            }
        },
        "type": {
            "type": "string",
            "const": "catbn"
        }
    },
    "required": [
        "graph",
        "cpds",
        "type"
    ]
}