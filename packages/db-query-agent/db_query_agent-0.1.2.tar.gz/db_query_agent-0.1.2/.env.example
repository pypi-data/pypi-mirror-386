# ========================================
# REQUIRED CONFIGURATION
# ========================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration
# Examples for different databases:

# SQLite (for testing)
DATABASE_URL=sqlite:///./test_database.db

# PostgreSQL (without SSL)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# PostgreSQL (with SSL in URL)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name?sslmode=require

# PostgreSQL (with SSL certificates - use SSL_* env vars below)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# MySQL (without SSL)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/database_name

# MySQL (with SSL in URL)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/database_name?ssl_ca=/path/to/ca.pem

# SQL Server (without SSL)
# DATABASE_URL=mssql+pyodbc://username:password@localhost/database_name?driver=ODBC+Driver+17+for+SQL+Server&TrustServerCertificate=yes

# SQL Server (with SSL)
# DATABASE_URL=mssql+pyodbc://username:password@localhost/database_name?driver=ODBC+Driver+17+for+SQL+Server&Encrypt=yes

# ========================================
# MODEL CONFIGURATION (Optional)
# ========================================

# Model selection strategy: "adaptive" (default) or "fixed"
MODEL_STRATEGY=adaptive

# Models for different query complexities
FAST_MODEL=gpt-4o-mini
BALANCED_MODEL=gpt-4.1-mini
COMPLEX_MODEL=gpt-4.1

# Model parameters
MODEL_TEMPERATURE=0.0
MODEL_MAX_TOKENS=1000

# ========================================
# CACHE CONFIGURATION (Optional)
# ========================================

# Enable/disable caching
CACHE_ENABLED=true

# Cache backend: "memory", "sqlite", or "redis"
CACHE_BACKEND=memory

# Cache TTL (in seconds)
CACHE_SCHEMA_TTL=3600
CACHE_QUERY_TTL=300
CACHE_LLM_TTL=3600

# Redis URL (only if using redis backend)
# REDIS_URL=redis://localhost:6379/0

# ========================================
# SAFETY CONFIGURATION (Optional)
# ========================================

# Only allow SELECT queries (recommended for production)
READ_ONLY=true

# Maximum query execution time (seconds)
QUERY_TIMEOUT=30

# Maximum rows to return
MAX_RESULT_ROWS=10000

# ========================================
# CONNECTION CONFIGURATION (Optional)
# ========================================

# Connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# SSL Configuration (for certificate-based authentication)
# SSL_ENABLED=true
# SSL_CERT=/path/to/client-cert.pem
# SSL_KEY=/path/to/client-key.pem
# SSL_CA=/path/to/ca-cert.pem
# SSL_VERIFY=true

# ========================================
# PERFORMANCE CONFIGURATION (Optional)
# ========================================

# Only load relevant tables (faster for large databases)
LAZY_SCHEMA_LOADING=true

# Enable streaming responses
ENABLE_STREAMING=false

# Maximum tables to include in LLM context
MAX_TABLES_IN_CONTEXT=5

# Warm up cache on initialization
WARMUP_ON_INIT=false
