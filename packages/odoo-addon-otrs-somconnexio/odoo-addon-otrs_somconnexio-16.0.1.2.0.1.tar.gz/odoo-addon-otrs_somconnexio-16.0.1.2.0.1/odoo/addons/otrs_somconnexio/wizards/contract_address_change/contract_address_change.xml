<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_form_contract_address_change_wizard" model="ir.ui.view">
      <field name="name">Contract Address Change Wizard</field>
      <field name="model">contract.address.change.wizard</field>
      <field name="inherit_id" ref="somconnexio.view_form_contract_address_change_wizard"/>
      <field name="arch" type="xml">
        <field name="new_product_category_id" position="after">
          <field name="mm_fiber_coverage" attrs="{'invisible': [('new_product_category_id','!=',%(somconnexio.broadband_fiber_service)d)]}"/>
          <field name="asociatel_fiber_coverage" attrs="{'invisible': [('new_product_category_id','!=',%(somconnexio.broadband_fiber_service)d)]}"/>
          <field name="vdf_fiber_coverage" attrs="{'invisible': [('new_product_category_id','!=',%(somconnexio.broadband_fiber_service)d)]}"/>
          <field name="orange_fiber_coverage" attrs="{'invisible': ['|',('new_product_category_id','!=',%(somconnexio.broadband_fiber_service)d),                                          ('product_id','in', [%(somconnexio.Fibra100Mb)d,%(somconnexio.Fibra600Mb)d,                                                                   %(somconnexio.Fibra1Gb)d])]}"/>
          <field name="adsl_coverage" attrs="{'invisible': [('new_product_category_id','!=',%(somconnexio.broadband_adsl_service)d)]}"/>
        </field>
      </field>
    </record>
  </data>
</odoo>
