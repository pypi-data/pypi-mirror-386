<?xml version="1.0"?>
<odoo>
    <record id="view_form_partner_create_lead_wizard_otrs" model="ir.ui.view">
        <field name="name">Partner Lead Create Wizard OTRS Injected Fields</field>
        <field name="model">partner.create.lead.wizard</field>
        <field name="inherit_id" ref="somconnexio.view_form_partner_create_lead_wizard"/>
        <field name="arch" type="xml">
            <group name="Service address" position="after">
                <group name="Fiber coverage" string="Fiber coverage" attrs="{'invisible': ['|', ('product_categ_id', '!=', %(somconnexio.broadband_fiber_service)d), ('team_id','!=', %(somconnexio.business)d)]}">
                    <field name="fiber_supplier" widget='radio' options="{'horizontal': true}"/>
                    <field name="mm_fiber_coverage" attrs="{'invisible': [('fiber_supplier', '!=', 'MM')], 'required': [('fiber_supplier', '=', 'MM'),('product_categ_id', '=', %(somconnexio.broadband_fiber_service)d),('team_id','=', %(somconnexio.business)d)]}"/>
                    <field name="vdf_fiber_coverage" attrs="{'invisible': [('fiber_supplier', '!=', 'VDF')], 'required': [('fiber_supplier', '=', 'VDF'),('product_categ_id', '=', %(somconnexio.broadband_fiber_service)d),('team_id','=', %(somconnexio.business)d)]}"/>
                </group>
            </group>
        </field>
    </record>
 
</odoo>
