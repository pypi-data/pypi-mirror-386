# Include important documentation files
include README.md
include LICENSE
include CONTRIBUTING.md
include CHANGELOG.md
include PRD.md

# Include documentation directory
recursive-include docs *.md *.txt *.rst

# Include configuration templates and examples
include config/token.json.example
recursive-include config *.json *.yaml *.yml

# Include project metadata
include pyproject.toml

# Exclude development and build files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .git*
global-exclude .DS_Store

# Exclude development dependencies
exclude .gitignore
exclude .python-version
exclude .rules
exclude package.json
exclude package-lock.json
exclude uv.lock
exclude node_modules/*
recursive-exclude node_modules *
recursive-exclude .venv *
recursive-exclude __pycache__ *
recursive-exclude .taskmaster *
recursive-exclude .claude *
recursive-exclude .git *
recursive-exclude .config *