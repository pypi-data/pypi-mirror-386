# PostgreSQL connection settings (used by config.py)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=context_bridge
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Connection pool settings
DB_POOL_MAX=10

