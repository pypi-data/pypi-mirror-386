# Include important documentation files
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include demo files
recursive-include demos *.py
recursive-include demos *.md

# Include inspiration and documentation
recursive-include inspiration *.md *.markdown

# Exclude development and cache files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude .env

# Exclude test databases and storage
exclude *.db
recursive-exclude demo_storage *